{% extends 'front_base.html.twig' %}

{% block title %}Manage Bookings - Eduport{% endblock %}

{% block stylesheets %}
<style>
/* Modern Instructor Dashboard Styles */
.instructor-gradient {
    background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    position: relative;
    overflow: hidden;
}
.instructor-gradient::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('{{ asset('assets/images/pattern/04.png') }}') no-repeat center center;
    background-size: cover;
    opacity: 0.1;
}
.profile-banner {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    position: relative;
    overflow: hidden;
}
.profile-banner::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(13, 110, 253, 0.05) 0%, transparent 70%);
    animation: float 6s ease-in-out infinite;
}
.avatar-enhanced {
    border: 4px solid white;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
}
.avatar-enhanced:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
}
.course-card-modern {
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}
.course-card-modern:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
}
.sidebar-modern {
    background: #212529;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
}
.sidebar-modern .list-group-item {
    background: transparent;
    border: none;
    color: rgba(255,255,255,0.8);
    transition: all 0.3s ease;
    border-radius: 10px;
    margin: 5px;
}
.sidebar-modern .list-group-item:hover {
    background: rgba(255,255,255,0.1);
    color: white;
    transform: translateX(5px);
}
.sidebar-modern .list-group-item.active {
    background: rgba(255,255,255,0.2);
    color: white;
}
.sidebar-modern .list-group-item.text-danger:hover {
    background: rgba(220, 53, 69, 0.2);
}
@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
}
.verified-badge {
    background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    color: white;
    padding: 2px 8px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: bold;
}
.create-course-btn {
    background: #198754;
    border: none;
    color: white;
    padding: 12px 30px;
    border-radius: 25px;
    font-weight: bold;
    transition: all 0.3s ease;
    box-shadow: 0 5px 20px rgba(25, 135, 84, 0.3);
}
.create-course-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(25, 135, 84, 0.4);
    color: white;
}
.table-modern {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}
.table-modern thead {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}
.table-modern tbody tr {
    transition: all 0.3s ease;
}
.table-modern tbody tr:hover {
    background: rgba(13, 110, 253, 0.05);
    transform: translateX(5px);
}
.search-modern {
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 25px;
    padding: 12px 20px;
    transition: all 0.3s ease;
}
.search-modern:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}
.card-modern {
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: none;
    overflow: hidden;
    position: relative;
}
.card-modern::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #0d6efd, #6f42c1, #ffc107, #fd7e14);
    background-size: 300% 100%;
    animation: gradientShift 3s ease-in-out infinite;
}
.card-modern .card-header {
    background: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
    border-radius: 20px 20px 0 0;
    padding: 1.5rem;
    position: relative;
}
.card-modern .card-body {
    padding: 2rem;
}
.courses-header {
    display: flex;
    justify-content: between;
    align-items: center;
    margin-bottom: 0;
}
.courses-header h5 {
    color: #212529;
    font-weight: bold;
    font-size: 1.5rem;
}
.courses-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}
.stat-item {
    text-align: center;
    padding: 1.5rem 1rem;
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 20px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}
.stat-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(13, 110, 253, 0.1), transparent);
    transition: left 0.6s ease;
}
.stat-item:hover::before {
    left: 100%;
}
.stat-item:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    border-color: #0d6efd;
}
.stat-icon {
    width: 50px;
    height: 50px;
    margin: 0 auto 1rem;
    background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.25rem;
    transition: all 0.3s ease;
}
.stat-item:hover .stat-icon {
    transform: rotate(10deg) scale(1.1);
    box-shadow: 0 8px 25px rgba(13, 110, 253, 0.3);
}
.stat-number {
    font-size: 2rem;
    font-weight: bold;
    color: #212529;
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
}
.stat-item:hover .stat-number {
    color: #0d6efd;
    transform: scale(1.05);
}
.stat-label {
    font-size: 0.875rem;
    color: #6c757d;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
}
.stat-item:hover .stat-label {
    color: #495057;
}
.stat-trend {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 20px;
    font-weight: 600;
}
.trend-up {
    background: rgba(40, 167, 69, 0.1);
    color: #28a745;
}
.trend-down {
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
}
.trend-neutral {
    background: rgba(108, 117, 125, 0.1);
    color: #6c757d;
}
.search-sort-container {
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 15px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}
.table-modern {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    border: 1px solid #dee2e6;
}
.table-modern thead {
    background: #f8f9fa;
    color: #212529;
    border-bottom: 1px solid #dee2e6;
}
.table-modern thead th {
    border: none;
    padding: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.5px;
}
.table-modern tbody tr {
    transition: all 0.3s ease;
    border-bottom: 1px solid #f8f9fa;
}
.table-modern tbody tr:hover {
    background: #f8f9fa;
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
}
.table-modern tbody td {
    padding: 1.25rem 1rem;
    vertical-align: middle;
}
.course-title-cell {
    font-weight: 600;
}
.course-title-cell h6 {
    color: #212529;
    margin-bottom: 0.25rem;
}
.course-title-cell h6:hover {
    color: #0d6efd;
}
.course-meta {
    font-size: 0.875rem;
    color: #6c757d;
}
.badge-modern {
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-weight: 500;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}
.action-buttons {
    display: flex;
    gap: 0.5rem;
}
.btn-modern {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border: none;
}
.btn-modern:hover {
    transform: scale(1.1);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}
.btn-edit {
    background: #28a745;
    color: white;
}
.btn-delete {
    background: #dc3545;
    color: white;
}
.no-courses {
    text-align: center;
    padding: 3rem;
    color: #6c757d;
}
.no-courses i {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #dee2e6;
}

/* Custom modal styles to prevent backdrop issues */
.modal {
    z-index: 9999 !important;
    background: rgba(0, 0, 0, 0.5) !important;
}
.modal-backdrop {
    z-index: 9998 !important;
}
.modal-dialog {
    z-index: 10000 !important;
    pointer-events: auto !important;
}
.modal-content {
    z-index: 10001 !important;
    pointer-events: auto !important;
}
.modal-header, .modal-body, .modal-footer {
    pointer-events: auto !important;
    z-index: 10002 !important;
}

/* Ensure buttons are clickable */
.modal-footer button {
    z-index: 10003 !important;
    position: relative !important;
    pointer-events: auto !important;
    cursor: pointer !important;
}

/* Fix any overlay issues */
.modal.show {
    display: block !important;
    pointer-events: auto !important;
}
</style>
{% endblock %}

{% block content %}

<!-- **************** MAIN CONTENT START **************** -->
<main>
	
<!-- =======================
Page Banner START -->
<section class="pt-0">
	<!-- Main banner background image -->
	<div class="container-fluid px-0">
		<div class="bg-blue h-100px h-md-200px rounded-0" style="background:url({{ asset('assets/images/pattern/04.png') }}) no-repeat center center; background-size:cover;">
		</div>
	</div>
	<div class="container mt-n4">
		<div class="row">
			<!-- Profile banner START -->
			<div class="col-12">
				<div class="profile-banner card-body p-4">
					<div class="row d-flex justify-content-between">
						<!-- Avatar -->
						<div class="col-auto mt-4 mt-md-0">
							<div class="avatar avatar-xxl mt-n3 position-relative">
								<img class="avatar-img rounded-circle avatar-enhanced" src="{{ asset('assets/images/avatar/01.jpg') }}" alt="">
								<div class="position-absolute bottom-0 end-0">
									<span class="verified-badge">
										<i class="bi bi-patch-check-fill"></i> Verified
									</span>
								</div>
							</div>
						</div>
						<!-- Profile info -->
						<div class="col d-md-flex justify-content-between align-items-center mt-4">
							<div>
								<h1 class="my-1 fs-3 fw-bold">Booking Management</h1>
								<div class="d-flex flex-wrap align-items-center gap-3 mb-2">
									<span class="badge bg-warning bg-opacity-10 text-warning">
										<i class="fas fa-envelope me-1"></i>{{ app.user ? app.user.email : 'admin@example.com' }}
									</span>
									<span class="badge bg-purple bg-opacity-10 text-purple">
										<i class="fas fa-calendar-check me-1"></i>{{ bookings|length }} Bookings
									</span>
									<span class="badge bg-orange bg-opacity-10 text-orange">
										<i class="fas fa-user-tag me-1"></i>Administrator
									</span>
								</div>
								<p class="text-muted mb-0">Session Booking Manager | Customer Service | Administrator</p>
							</div>
							<!-- Button -->
							<div class="d-flex align-items-center mt-2 mt-md-0">
								<a href="{{ path('all_sessions') }}" class="create-course-btn">
									<i class="fas fa-calendar me-2"></i>View Sessions
								</a>
							</div>
						</div>
					</div>
				</div>
				<!-- Profile banner END -->

				<!-- Advanced filter responsive toggler START -->
				<!-- Divider -->
				<hr class="d-xl-none">
				<div class="col-12 col-xl-3 d-flex justify-content-between align-items-center">
					<a class="h6 mb-0 fw-bold d-xl-none" href="#">Menu</a>
					<button class="btn btn-primary d-xl-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
						<i class="fas fa-sliders-h"></i>
					</button>
				</div>
				<!-- Advanced filter responsive toggler END -->
			</div>
		</div>
	</div>
</section>
<!-- =======================
Page Banner END -->

<!-- =======================
Page content START -->
<section class="pt-0">
	<div class="container">
		<div class="row">
			<!-- Left sidebar START -->
			<div class="col-xl-3">
				<!-- Responsive offcanvas body START -->
				<div class="offcanvas-xl offcanvas-end" tabindex="-1" id="offcanvasSidebar">
					<!-- Offcanvas header -->
					<div class="offcanvas-header bg-light">
						<h5 class="offcanvas-title" id="offcanvasNavbarLabel">My profile</h5>
						<button  type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasSidebar" aria-label="Close"></button>
					</div>
					<!-- Offcanvas body -->
					<div class="offcanvas-body p-3 p-xl-0">
						{% include 'instructor/_sidebar.html.twig' %}
					</div>
				</div>
				<!-- Responsive offcanvas body END -->
			</div>
			<!-- Left sidebar END -->

			<!-- Main content START -->
			<div class="col-xl-9">

				<!-- Card START -->
				<div class="card-modern">
					<!-- Card header START -->
					<div class="card-header">
						<div class="courses-header">
							<h5 class="mb-0">All Bookings</h5>
						</div>
						<!-- Course stats -->
						<div class="courses-stats">
							<div class="stat-item">
								<div class="stat-trend trend-up">
									<i class="fas fa-arrow-up"></i> 12%
								</div>
								<div class="stat-icon">
									<i class="fas fa-calendar-check"></i>
								</div>
								<div class="stat-number">{{ bookings|length }}</div>
								<div class="stat-label">Total Bookings</div>
							</div>
							<div class="stat-item">
								<div class="stat-trend trend-up">
									<i class="fas fa-arrow-up"></i> 8%
								</div>
								<div class="stat-icon">
									<i class="fas fa-clock"></i>
								</div>
								<div class="stat-number">{{ bookings|length }}</div>
								<div class="stat-label">This Month</div>
							</div>
							<div class="stat-item">
								<div class="stat-trend trend-neutral">
									<i class="fas fa-minus"></i> 0%
								</div>
								<div class="stat-icon">
									<i class="fas fa-user-clock"></i>
								</div>
								<div class="stat-number">0</div>
								<div class="stat-label">Pending</div>
							</div>
							<div class="stat-item">
								<div class="stat-trend trend-up">
									<i class="fas fa-arrow-up"></i> 24%
								</div>
								<div class="stat-icon">
									<i class="fas fa-check-circle"></i>
								</div>
								<div class="stat-number">{{ bookings|length }}</div>
								<div class="stat-label">Confirmed</div>
							</div>
						</div>
					</div>
					<!-- Card header END -->

					<!-- Card body START -->
					<div class="card-body">
						<!-- Search and select START -->
						<div class="search-sort-container">
							<div class="row g-3 align-items-center justify-content-between">
								<div class="col-md-8">
									<form class="rounded position-relative" id="searchForm">
										<input class="form-control search-modern" type="search" placeholder="Search bookings..." id="searchInput" aria-label="Search">
										<button class="btn bg-transparent px-2 py-0 position-absolute top-50 end-0 translate-middle-y" type="submit"><i class="fas fa-search fs-6"></i></button>
									</form>
								</div>
								<div class="col-md-3">
									<!-- Select option -->
									<select class="form-select js-choice border-0 z-index-9 bg-transparent" id="sortSelect" aria-label=".form-select-sm">
										<option value="">Sort by</option>
										<option value="name">Name</option>
										<option value="email">Email</option>
										<option value="date">Date</option>
									</select>
								</div>
							</div>
						</div>
						<!-- Search and select END -->

						<!-- Enhanced Flash Messages -->
						{% for message in app.flashes('success') %}
							<div data-flash-type="success" 
							     data-flash-title="Success" 
							     data-flash-message="{{ message }}"
							     style="display: none;">
								{{ message }}
							</div>
						{% endfor %}

						<!-- Booking list START -->
						<div class="table-responsive border-0 rounded-3">
							<table class="table table-modern align-middle mb-0" id="bookingsTable">
								<thead>
									<tr>
										<th scope="col" class="border-0 rounded-start">Customer Name</th>
										<th scope="col" class="border-0">Email</th>
										<th scope="col" class="border-0">Session</th>
										<th scope="col" class="border-0">Status</th>
										<th scope="col" class="border-0 rounded-end">Action</th>
									</tr>
								</thead>
								<tbody id="bookingsTableBody">
									{% if bookings is empty %}
										<tr>
											<td colspan="5" class="no-courses">
												<div class="no-courses">
													<i class="fas fa-calendar-times"></i>
													<h6>No bookings found</h6>
													<p>View available sessions to manage bookings</p>
													<a href="{{ path('all_sessions') }}" class="btn btn-primary btn-sm mt-2">View Sessions</a>
												</div>
											</td>
										</tr>
									{% else %}
										{% for booking in bookings %}
											<tr data-booking-id="{{ booking.id }}" data-booking-name="{{ booking.firstName|lower }} {{ booking.lastName|lower }}" data-booking-email="{{ booking.userEmail|lower }}">
												<td>
													<div class="d-flex align-items-center">
														<div class="me-3">
															<img src="{{ asset('assets/images/avatar/01.jpg') }}" class="rounded" alt="customer" width="50">
														</div>
														<div class="course-title-cell">
															<h6 class="mb-0">{{ booking.firstName }} {{ booking.lastName }}</h6>
															<div class="course-meta">
																<i class="fas fa-user me-1"></i>Customer
																<i class="fas fa-calendar me-1 ms-2"></i>{{ booking.createdAt ? booking.createdAt|date('M d, Y') : 'Recent' }}
															</div>
														</div>
													</div>
												</td>
												<td>
													<div class="d-flex align-items-center">
														<i class="fas fa-envelope me-2 text-primary"></i>
														<span class="fw-bold">{{ booking.userEmail }}</span>
													</div>
												</td>
												<td>
													{% if booking.session %}
														<span class="badge badge-modern bg-info">{{ booking.session.name|default('Session') }}</span>
													{% else %}
														<span class="badge badge-modern bg-secondary">No Session</span>
													{% endif %}
												</td>
												<td>
													{% if booking.status == 'pending' %}
														<span class="badge badge-modern bg-warning">Pending</span>
													{% elseif booking.status == 'accepted' %}
														<span class="badge badge-modern bg-success">Accepted</span>
													{% elseif booking.status == 'denied' %}
														<span class="badge badge-modern bg-danger">Denied</span>
													{% else %}
														<span class="badge badge-modern bg-secondary">{{ booking.status|default('Unknown') }}</span>
													{% endif %}
												</td>
												<td>
													<div class="action-buttons">
														{% if booking.status == 'pending' %}
															<form method="post" action="{{ path('booking_accept', {'id': booking.id}) }}" style="display: inline;">
																<input type="hidden" name="_token" value="{{ csrf_token('accept_booking_' ~ booking.id) }}">
																<button type="submit" class="btn btn-sm btn-success me-1" title="Accept Booking">
																	<i class="fas fa-check"></i> Accept
																</button>
															</form>
															<form method="post" action="{{ path('booking_deny', {'id': booking.id}) }}" style="display: inline;">
																<input type="hidden" name="_token" value="{{ csrf_token('deny_booking_' ~ booking.id) }}">
																<button type="submit" class="btn btn-sm btn-danger me-1" title="Deny Booking">
																	<i class="fas fa-times"></i> Deny
																</button>
															</form>
														{% elseif booking.status == 'accepted' %}
															<a href="#" 
																class="btn btn-modern btn-edit" 
																title="Edit Booking"
																data-bs-toggle="modal" 
																data-bs-target="#modal"
																data-id="{{ booking.id }}"
																data-first-name="{{ booking.firstName }}"
																data-last-name="{{ booking.lastName }}"
																data-email="{{ booking.userEmail }}">
																<i class="fas fa-edit"></i>
															</a>
															<button class="btn btn-modern btn-delete" 
															        title="Delete Booking"
															        data-bs-toggle="modal"
															        data-bs-target="#deleteModal"
															        data-id="{{ booking.id }}"
															        data-token="{{ csrf_token('delete_booking_' ~ booking.id) }}">
																<i class="fas fa-trash"></i>
															</button>
