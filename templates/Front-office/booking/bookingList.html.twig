{% block javascripts %}
<!-- Choices.js -->
<script src="{{ asset('assets/vendor/choices/js/choices.min.js') }}"></script>

<!-- Init Choices.js and Search/Sort functionality -->
<script>
document.addEventListener("DOMContentLoaded", function() {
    // Initialize Choices.js
    const elements = document.querySelectorAll('.js-choice');
    elements.forEach(function(element) {
        new Choices(element, {
            searchEnabled: element.dataset.searchEnabled === 'true',
            searchPlaceholderValue: 'Search...',
            itemSelectText: 'Press to select',
        });
    });

    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const searchForm = document.getElementById('searchForm');
    const bookingsTableBody = document.getElementById('bookingsTableBody');
    const bookingsTable = document.getElementById('bookingsTable');
    const sortSelect = document.getElementById('sortSelect');

    if (searchInput && bookingsTableBody) {
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            filterBookings(searchTerm);
        });

        searchForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const searchTerm = searchInput.value.toLowerCase();
            filterBookings(searchTerm);
        });
    }

    // Sort functionality
    if (sortSelect && bookingsTableBody) {
        sortSelect.addEventListener('change', function() {
            const sortValue = this.value;
            sortBookings(sortValue);
        });
    }

    function filterBookings(searchTerm) {
        const rows = bookingsTableBody.getElementsByTagName('tr');
        
        for (let row of rows) {
            const name = row.getAttribute('data-booking-name') || '';
            const email = row.getAttribute('data-booking-email') || '';
            const isVisible = name.includes(searchTerm) || email.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
        }

        // Update pagination info
        updatePaginationInfo();
    }

    function sortBookings(sortValue) {
        const rows = Array.from(bookingsTableBody.getElementsByTagName('tr'));
        
        if (sortValue === '') {
            // Reset to original order
            rows.sort((a, b) => {
                return a.getAttribute('data-booking-id') - b.getAttribute('data-booking-id');
            });
        } else {
            rows.sort((a, b) => {
                switch(sortValue) {
                    case 'name':
                        return a.getAttribute('data-booking-name').localeCompare(b.getAttribute('data-booking-name'));
                    case 'email':
                        return a.getAttribute('data-booking-email').localeCompare(b.getAttribute('data-booking-email'));
                    default:
                        return 0;
                }
            });
        }

        // Re-append sorted rows
        rows.forEach(row => bookingsTableBody.appendChild(row));
        updatePaginationInfo();
    }

    function updatePaginationInfo() {
        const visibleRows = Array.from(bookingsTableBody.getElementsByTagName('tr')).filter(row => row.style.display !== 'none');
        const paginationInfo = document.querySelector('.d-flex.justify-content-between.align-items-center.mt-4 p');
        
        if (paginationInfo) {
            const count = visibleRows.length;
            paginationInfo.textContent = `Showing ${count > 0 ? 1 : 0} to ${count} of ${count} entries`;
        }
    }
});

// Edit modal functionality
document.getElementById('modal').addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;

    document.getElementById('modalId').value = button.getAttribute('data-id');
    document.getElementById('modalFirstName').value = button.getAttribute('data-first-name');
    document.getElementById('modalLastName').value = button.getAttribute('data-last-name');
    document.getElementById('modalEmail').value = button.getAttribute('data-email');
});

// Delete modal functionality
document.getElementById('deleteModal').addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;
    const bookingId = button.getAttribute('data-id');
    const token = button.getAttribute('data-token');

    document.getElementById('modalId').value = bookingId;
    document.getElementById('deleteToken').value = token;
    
    // Set the correct action URL with the booking ID
    const deleteForm = document.getElementById('deleteForm');
    deleteForm.action = `/booking/${bookingId}/delete`;
});
</script>
