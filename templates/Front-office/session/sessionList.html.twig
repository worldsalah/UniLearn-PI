{% extends 'front_base.html.twig' %}

{% block title %}Session List{% endblock %}

{% block content %}
<main>

<section class="bg-primary bg-opacity-10 py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="text-center">
                    <h1 class="mb-3"><span class="text-primary">Available Sessions</span></h1>
                    <p class="lead mb-3">Choose a session and book your preferred date</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <!-- Tabs content START -->
        <div class="tab-content" id="course-pills-tabContent">
            <!-- Content START -->
            <div class="tab-pane fade show active" id="course-pills-tabs-1" role="tabpanel" aria-labelledby="course-pills-tab-1">
                <div class="row g-4">
                    <!-- Card item START -->
                    {% for session in sessions %}
                        <div class="col-sm-6 col-lg-4 col-xl-3">
                            <div class="card shadow h-100">
                                <!-- Image -->
                                <img src="{{ asset('assets/images/courses/4by3/08.jpg') }}" class="card-img-top" alt="session image">
                                <!-- Card body -->
                                <div class="card-body pb-0">
                                    <!-- Badge and favorite -->
                                    <div class="d-flex justify-content-between mb-2">
                                        {% if session.level == 'beginner' %}
                                            <a href="#" class="badge bg-success bg-opacity-10 text-success">Beginner</a>
                                        {% elseif session.level == 'intermediate' %}
                                            <a href="#" class="badge bg-warning bg-opacity-10 text-warning">Intermediate</a>
                                        {% elseif session.level == 'advanced' %}
                                            <a href="#" class="badge bg-danger bg-opacity-10 text-danger">Advanced</a>
                                        {% else %}
                                            <a href="#" class="badge bg-info bg-opacity-10 text-info">{{ session.level|capitalize }}</a>
                                        {% endif %}
                                    </div>
                                    <!-- Title -->
                                    <h5 class="card-title fw-normal"><a href="#">{{ session.name }}</a></h5>
                                    <p class="mb-2 text-truncate-2">{{ session.sessionDescription }}</p>
                                    
                                    <!-- Date Range Display -->
                                    <div class="mb-2">
                                        <div class="list-inline-item h6 fw-light mb-0">
                                            <i class="fas fa-calendar-alt text-primary me-1"></i>
                                            {% if session.startDate and session.endDate %}
                                                {{ session.startDate|date('M d') }} - {{ session.endDate|date('M d, Y') }}
                                            {% elseif session.date %}
                                                {{ session.date|date('M d, Y') }}
                                            {% else %}
                                                Not scheduled
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <!-- Card footer -->
                                <div class="card-footer pt-0 pb-3">
                                    <hr>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h6 fw-light mb-0">
                                            <i class="far fa-clock text-warning me-2"></i>{{ session.duration }} minutes
                                        </span>
                                    </div>
                                    <!-- Book Now Button -->
                                    <div class="mt-3">
                                        <a href="{{ path('booking_create') }}?session_id={{ session.id }}" class="btn btn-primary w-100">
                                            <i class="fas fa-calendar-plus me-1"></i>Book This Session
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Card item END -->
                    {% else %}
                        <div class="col-12">
                            <div class="text-center py-5">
                                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">No Sessions Available</h4>
                                <p class="text-muted">Check back later for new sessions.</p>
                            </div>
                        </div>
                    {% endfor %}
                </div> <!-- Row END -->
            </div>
            <!-- Content END -->
        </div>
        <!-- Tabs content END -->
    </div>
</section>

</main>

<!-- Footer START -->
{{ include('components/footer.html.twig') }}
<!-- Footer END -->
{% endblock %}
