{% extends 'admin/base_admin.html.twig' %}

{% block title %}View Session - Admin{% endblock %}

{% block admin_content %}

<!-- Title -->
<div class="row">
    <div class="col-12 mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-2 mb-sm-0">Session Details</h1>
            <div class="btn-group" role="group">
                <a href="{{ path('session_data_display') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
                <a href="{{ path('instructor_edit_session', {'id': session.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Session Details Card -->
<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Session Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Session ID</label>
                            <p class="form-control-plaintext fw-bold">#{{ session.id }}</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Session Name</label>
                            <p class="form-control-plaintext">{{ session.name }}</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Level</label>
                            <p class="form-control-plaintext">
                                {% set level = session.level|default('unknown') %}
                                {% if level == 'beginner' %}
                                    <span class="badge bg-success bg-opacity-15 text-success">Beginner</span>
                                {% elseif level == 'intermediate' %}
                                    <span class="badge bg-warning bg-opacity-15 text-warning">Intermediate</span>
                                {% elseif level == 'advanced' %}
                                    <span class="badge bg-danger bg-opacity-15 text-danger">Advanced</span>
                                {% else %}
                                    <span class="badge bg-secondary bg-opacity-15 text-secondary">{{ level|capitalize }}</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Duration</label>
                            <p class="form-control-plaintext">
                                {% if session.duration %}
                                    {{ session.duration }} minutes
                                {% else %}
                                    <span class="text-muted">Not set</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Instructor</label>
                            <p class="form-control-plaintext">
                                {% if session.instructor %}
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm flex-shrink-0">
                                            <img class="avatar-img rounded-circle" src="{{ asset('assets/images/avatar/01.jpg') }}" alt="instructor">
                                        </div>
                                        <div class="ms-2">
                                            <strong>{{ session.instructor.fullName }}</strong><br>
                                            <small class="text-muted">{{ session.instructor.email }}</small>
                                        </div>
                                    </div>
                                {% else %}
                                    <span class="text-muted">No instructor assigned</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Start Date</label>
                            <p class="form-control-plaintext">
                                {% if session.startDate %}
                                    {{ session.startDate|date('F d, Y') }}
                                {% else %}
                                    <span class="text-muted">Not set</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">End Date</label>
                            <p class="form-control-plaintext">
                                {% if session.endDate %}
                                    {{ session.endDate|date('F d, Y') }}
                                {% else %}
                                    <span class="text-muted">Not set</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label text-muted">Description</label>
                            <p class="form-control-plaintext">
                                {% if session.sessionDescription %}
                                    {{ session.sessionDescription }}
                                {% else %}
                                    <span class="text-muted">No description available</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Actions Card -->
        <div class="card shadow">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('instructor_edit_session', {'id': session.id}) }}" class="btn btn-warning w-100">
                        <i class="fas fa-edit me-2"></i>Edit Session
                    </a>
                    
                    <button type="button" class="btn btn-outline-danger w-100" onclick="confirmDelete({{ session.id }})">
                        <i class="fas fa-trash me-2"></i>Delete Session
                    </button>
                </div>
            </div>
        </div>

        <!-- Session Statistics Card -->
        <div class="card shadow mt-3">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistics</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label text-muted">Session Status</label>
                    <div class="mt-1">
                        <span class="badge bg-info fs-6">Active</span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Bookings Count</label>
                    <p class="form-control-plaintext">
                        <span class="badge bg-primary fs-6">{{ session.bookings|length }}</span>
                    </p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Session Period</label>
                    <p class="form-control-plaintext">
                        {% if session.startDate and session.endDate %}
                            {{ session.startDate|date('M d') }} - {{ session.endDate|date('M d, Y') }}
                        {% else %}
                            <span class="text-muted">Not defined</span>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this session? This action cannot be undone.</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> All session data will be permanently removed.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Session
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block admin_scripts %}
<script>
function confirmDelete(sessionId) {
    const deleteForm = document.getElementById('deleteForm');
    deleteForm.action = '/instructor/session/' + sessionId + '/delete';
    
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}

// Auto-hide flash messages after 5 seconds
document.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
});
</script>
{% endblock %}
