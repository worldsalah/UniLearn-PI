					</a>
					<ul class="dropdown-menu" aria-labelledby="marketplaceDropdown">
						<li><a class="dropdown-item {% if app.request.attributes.get('_route') starts with 'app_admin_product' %}active{% endif %}" href="{{ path('app_admin_product_index') }}"><i class="fas fa-box fa-fw me-2"></i>Services</a></li>
						<li><a class="dropdown-item {% if app.request.attributes.get('_route') starts with 'app_admin_job' %}active{% endif %}" href="{{ path('app_admin_job_index') }}"><i class="fas fa-briefcase fa-fw me-2"></i>Job Requests</a></li>
						<li><a class="dropdown-item {% if app.request.attributes.get('_route') starts with 'app_admin_order' %}active{% endif %}" href="{{ path('app_admin_order_index') }}"><i class="fas fa-shopping-cart fa-fw me-2"></i>Orders</a></li>
						<li><hr class="dropdown-divider"></li>
						<li><a class="dropdown-item {% if app.request.attributes.get('_route') == 'app_marketplace_index' %}active{% endif %}" href="{{ path('app_marketplace_index') }}"><i class="fas fa-tachometer-alt fa-fw me-2"></i>Marketplace Dashboard</a></li>
						<li><a class="dropdown-item {% if app.request.attributes.get('_route') == 'app_marketplace_shop' %}active{% endif %}" href="{{ path('app_marketplace_shop') }}"><i class="fas fa-store fa-fw me-2"></i>Browse Marketplace</a></li>
					</ul>
				</li>

				
				<!-- Menu item 10 -->
				{% if app.user %}
				<li class="nav-item"> <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_favorite' %}active{% endif %}" href="{{ path('app_favorite_index') }}"><i class="fas fa-heart fa-fw me-2"></i>My Favorites</a></li>
				{% endif %}

				<!-- Title -->
				<li class="nav-item ms-2 my-2">Documentation</li>
			</ul>
			<!-- Sidebar menu end -->

			<!-- Sidebar footer START -->
			<div class="px-3 mt-auto pt-3">
				<div class="d-flex align-items-center justify-content-between text-primary-hover">
						<a class="h5 mb-0 text-body" href="#" data-bs-toggle="tooltip" data-bs-placement="top" title="Settings">
							<i class="bi bi-gear-fill"></i>
						</a>
						<a class="h5 mb-0 text-body" href="{{ path('app_home') }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Home">
							<i class="bi bi-globe"></i>
						</a>
						<a class="h5 mb-0 text-body" href="{{ path('app_logout') }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Sign out">
							<i class="bi bi-power"></i>
						</a>
				</div>
			</div>
			<!-- Sidebar footer END -->
			
		</div>
	</div>
</nav>
<!-- Sidebar END -->

<!-- Page content START -->
