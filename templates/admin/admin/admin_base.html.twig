{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/apexcharts/css/apexcharts.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/overlay-scrollbar/css/overlayscrollbars.min.css') }}">
{% endblock %}

{% block body %}
<!-- **************** MAIN CONTENT START **************** -->
<main>
	
<!-- Sidebar START -->
<nav class="navbar sidebar navbar-expand-xl navbar-dark bg-dark" id="mainSidebar">

	<!-- Navbar brand for xl START -->
	<div class="d-flex align-items-center justify-content-between w-100">
		<a class="navbar-brand" href="{{ path('app_home') }}">
			<img class="navbar-brand-item" src="{{ asset('assets/images/logo-light.svg') }}" alt="">
		</a>
		<button class="btn btn-link text-white d-xl-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar">
			<i class="fas fa-bars"></i>
		</button>
		<button class="btn btn-link text-white d-none d-xl-block" id="sidebarToggle" type="button">
			<i class="fas fa-bars"></i>
		</button>
	</div>
	<!-- Navbar brand for xl END -->
	
	<div class="offcanvas offcanvas-start flex-row custom-scrollbar h-100" data-bs-backdrop="true" tabindex="-1" id="offcanvasSidebar">
		<div class="offcanvas-body sidebar-content d-flex flex-column bg-dark">

			<!-- Sidebar menu START -->
			<ul class="navbar-nav flex-column" id="navbar-sidebar">
				
				<!-- Menu item 1 -->
				<li class="nav-item"><a href="{{ path('app_admin_dashboard') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_admin_dashboard' %}active{% endif %}"><i class="bi bi-house fa-fw me-2"></i>Dashboard</a></li>
				
				<!-- Title -->
				<li class="nav-item ms-2 my-2">Management</li>

				<!-- Menu item 3 -->
				<li class="nav-item"> <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_admin_student' %}active{% endif %}" href="{{ path('app_admin_student_index') }}"><i class="fas fa-user-graduate fa-fw me-2"></i>Students (Freelancers)</a></li>

				<!-- Menu item 4 -->
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle {% if app.request.attributes.get('_route') starts with 'app_admin_product' or app.request.attributes.get('_route') starts with 'app_admin_job' or app.request.attributes.get('_route') starts with 'app_admin_order' or app.request.attributes.get('_route') starts with 'app_marketplace' %}active{% endif %}" href="#" id="marketplaceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
