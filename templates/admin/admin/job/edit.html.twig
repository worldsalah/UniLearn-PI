{% extends 'admin/admin_base.html.twig' %}

{% block title %}Edit Job Request - Admin{% endblock %}

{% block admin_content %}
<div class="row">
    <div class="col-12 mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Edit Job Request: {{ job.title }}</h1>
            <a href="{{ path('app_admin_job_index') }}" class="btn btn-secondary-soft mb-0">Back to List</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        {{ include('admin/job/_form.html.twig', {'button_label': 'Update Job Request'}) }}
    </div>
</div>

<div class="row mt-4">
    <div class="col-lg-8 mx-auto text-end">
        <form method="post" action="{{ path('app_admin_job_delete', {id: job.id}) }}" onsubmit="return confirm('Are you sure you want to delete this job request?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
            <button class="btn btn-danger">Delete This Job</button>
        </form>
    </div>
</div>
{% endblock %}
