{% extends 'admin/admin_base.html.twig' %}

{% block title %}Manage Jobs - Admin{% endblock %}

{% block admin_content %}
<!-- Title -->
<div class="row mb-4">
    <div class="col-12 mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-2 mb-sm-0">Job Requests</h1>
            <a href="{{ path('app_admin_job_new') }}" class="btn btn-primary mb-0">Add New Job</a>
        </div>
    </div>
</div>

<div class="card bg-transparent">
    <!-- Card header START -->
    <div class="card-header bg-transparent border-bottom px-0">
        <!-- Search and select START -->
        <div class="row g-3 align-items-center justify-content-between">
            <!-- Search bar -->
            <div class="col-md-8">
                <form method="get" action="{{ path('app_admin_job_index') }}" class="rounded position-relative">
                    <input class="form-control bg-transparent" type="search" name="search" placeholder="Search jobs..." value="{{ search }}" aria-label="Search">
                    <button class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-primary-hover text-reset" type="submit">
                        <i class="fas fa-search fs-6 "></i>
                    </button>
                </form>
            </div>
        </div>
        <!-- Search and select END -->
    </div>
    <!-- Card header END -->

    <!-- Card body START -->
    <div class="card-body px-0">
        <div class="table-responsive border-0">
            <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                <!-- Table head -->
                <thead>
                    <tr>
                        <th scope="col" class="border-0 rounded-start">Job Title</th>
                        <th scope="col" class="border-0">Client</th>
                        <th scope="col" class="border-0">Budget</th>
                        <th scope="col" class="border-0">Applications</th>
                        <th scope="col" class="border-0">Status</th>
                        <th scope="col" class="border-0">Created</th>
                        <th scope="col" class="border-0 rounded-end">Actions</th>
                    </tr>
                </thead>

                <!-- Table body START -->
                <tbody>
                    {% for job in jobs %}
                        <tr>
                            <!-- Table data -->
                            <td>
                                <h6 class="mb-0">{{ job.title }}</h6>
                                <span class="text-body small"><i class="fas fa-fw fa-calendar-alt me-1 mt-1"></i>{{ job.createdAt|date('d M Y') }}</span>
                            </td>

                            <!-- Table data -->
                            <td>{{ job.client.email }}</td>

                            <!-- Table data -->
                            <td>
                                <span class="h6 mb-0 fw-light">${{ job.budget }}</span>
                            </td>

                            <!-- Table data - Applications -->
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-primary bg-opacity-10 text-primary me-2">{{ job.applicationCount ?: 0 }}</span>
                                    {% if job.applicationCount > 0 %}
                                        <small class="text-muted">applications</small>
                                    {% else %}
                                        <small class="text-muted">no applications</small>
                                    {% endif %}
                                </div>
                            </td>

                            <!-- Table data -->
                            <td>
                                {% if job.status == 'open' %}<span class="badge bg-success bg-opacity-10 text-success">Open</span>
                                {% elseif job.status == 'assigned' %}<span class="badge bg-warning bg-opacity-10 text-warning">Assigned</span>
                                {% else %}<span class="badge bg-secondary bg-opacity-10 text-secondary">Completed</span>{% endif %}
                            </td>

                            <!-- Table data -->
                            <td>
                                <span class="text-body small"><i class="fas fa-fw fa-calendar-alt me-1 mt-1"></i>{{ job.createdAt|date('M j, Y') }}</span>
                            </td>

                            <!-- Table data - Actions -->
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_admin_job_edit', {id: job.id}) }}" class="btn btn-sm btn-outline-primary" title="Edit Job">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a href="{{ path('app_job_show', {id: job.id}) }}" class="btn btn-sm btn-outline-info" title="View Job" target="_blank">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                    {% if job.applicationCount > 0 %}
                                    <a href="{{ path('app_admin_job_edit', {id: job.id}) }}#applications" class="btn btn-sm btn-outline-success" title="View Applications">
                                        <i class="fas fa-users me-1"></i>Applications ({{ job.applicationCount }})
                                    </a>
                                    {% endif %}
                                    <form method="post" action="{{ path('app_admin_job_delete', {id: job.id}) }}" onsubmit="return confirm('Are you sure you want to delete this job? This action cannot be undone.');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
                                        <button class="btn btn-sm btn-outline-danger" title="Delete Job">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No jobs found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!-- Card body END -->

    <!-- Card footer START -->
    <div class="card-footer bg-transparent pt-0">
        <!-- Pagination -->
        <div class="d-sm-flex justify-content-between align-items-center">
            <!-- Content -->
            <p class="mb-0 text-center text-sm-start">Showing page {{ jobsPaginator.getCurrentPageNumber }} of {{ jobsPaginator.getTotalItemCount }} jobs</p>
            <!-- Pagination -->
            {{ knp_pagination_render(jobsPaginator) }}
        </div>
    </div>
    <!-- Card footer END -->
</div>
{% endblock %}
