{% extends 'admin/admin_base.html.twig' %}

{% block title %}Edit Order - Admin{% endblock %}

{% block admin_content %}
<div class="row">
    <div class="col-12 mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Edit Order #{{ order.id }}</h1>
            <a href="{{ path('app_admin_order_index') }}" class="btn btn-secondary-soft mb-0">Back to List</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-body">
                <div class="mb-4">
                    <h6>Order Details:</h6>
                    <ul class="list-group list-group-flush mb-0">
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span>Service:</span>
                            <span class="text-dark fw-bold">{{ order.product.title }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span>Buyer:</span>
                            <span class="text-dark fw-bold">{{ order.buyer.email }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span>Date:</span>
                            <span class="text-dark fw-bold">{{ order.createdAt|date('Y-m-d H:i') }}</span>
                        </li>
                    </ul>
                </div>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_row(form.status, {
                                'label': 'Order Status',
                                'attr': {'class': 'form-select js-choice'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.totalPrice, {
                                'label': 'Total Price ($)',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mt-4">
                        <button class="btn btn-primary mb-0">Update Order</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-lg-8 mx-auto text-end">
        <form method="post" action="{{ path('app_admin_order_delete', {id: order.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
            <button class="btn btn-danger">Delete This Order</button>
        </form>
    </div>
</div>
{% endblock %}
