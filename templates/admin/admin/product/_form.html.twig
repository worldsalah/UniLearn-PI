<div class="card shadow">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_row(form.title, {
                        'label': 'Service Title',
                        'attr': {'class': 'form-control', 'placeholder': 'Enter service title'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.category, {
                        'label': 'Category',
                        'attr': {'class': 'form-control', 'placeholder': 'e.g. Web Design, Tutoring'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.price, {
                        'label': 'Price ($)',
                        'attr': {'class': 'form-control', 'placeholder': '0.00'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.freelancer, {
                        'label': 'Freelancer',
                        'attr': {'class': 'form-select js-choice'}
                    }) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.description, {
                        'label': 'Description',
                        'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Describe the service...'}
                    }) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.imageFile, {
                        'label': 'Service Image',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <button class="btn btn-primary mb-0">{{ button_label|default('Save Changes') }}</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
