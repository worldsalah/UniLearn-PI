<div class="card shadow">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row g-3">
                <div class="col-12">
                    {{ form_row(form.user, {
                        'label': 'Linked User (Email)',
                        'attr': {'class': 'form-select js-choice'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.fullName, {
                        'label': 'Full Name',
                        'attr': {'class': 'form-control', 'placeholder': 'Enter full name'}
                    }) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.bio, {
                        'label': 'Short Bio',
                        'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Tell us about the freelancer'}
                    }) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.skills, {
                        'label': 'Skills (comma separated or enter values)',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <button class="btn btn-primary mb-0">{{ button_label|default('Save Changes') }}</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
