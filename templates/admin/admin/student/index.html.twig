{% extends 'admin/admin_base.html.twig' %}

{% block title %}Manage Students - Admin{% endblock %}

{% block admin_content %}
<!-- Title -->
<div class="row">
    <div class="col-12 mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-2 mb-sm-0">Students (Freelancers)</h1>
            <a href="{{ path('app_admin_student_new') }}" class="btn btn-primary mb-0">Add New Student</a>
        </div>
    </div>
</div>

<div class="card bg-transparent">
    <!-- Card header START -->
    <div class="card-header bg-transparent border-bottom px-0">
        <!-- Search and select START -->
        <div class="row g-3 align-items-center justify-content-between">
            <!-- Search bar -->
            <div class="col-md-8">
                <form class="rounded position-relative">
                    <input class="form-control bg-transparent" type="search" placeholder="Search" aria-label="Search">
                    <button class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-primary-hover text-reset" type="submit">
                        <i class="fas fa-search fs-6 "></i>
                    </button>
                </form>
            </div>
        </div>
        <!-- Search and select END -->
    </div>
    <!-- Card header END -->

    <!-- Card body START -->
    <div class="card-body px-0">
        <div class="table-responsive border-0">
            <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                <!-- Table head -->
                <thead>
                    <tr>
                        <th scope="col" class="border-0 rounded-start">Student name</th>
                        <th scope="col" class="border-0">Join date</th>
                        <th scope="col" class="border-0">Rating</th>
                        <th scope="col" class="border-0">Email</th>
                        <th scope="col" class="border-0 rounded-end">Action</th>
                    </tr>
                </thead>

                <!-- Table body START -->
                <tbody>
                    {% for student in students %}
                        <tr>
                            <!-- Table data -->
                            <td>
                                <div class="d-flex align-items-center position-relative">
                                    <!-- Image -->
                                    <div class="avatar avatar-md">
                                        <img src="{{ asset('assets/images/avatar/01.jpg') }}" class="rounded-circle" alt="">
                                    </div>
                                    <div class="mb-0 ms-3">
                                        <!-- Title -->
                                        <h6 class="mb-0"><a href="#" class="stretched-link">{{ student.fullName }}</a></h6>
                                        <span class="text-body small"><i class="fas fa-fw fa-map-marker-alt me-1 mt-1"></i>Location</span>
                                    </div>
                                </div>
                            </td>

                            <!-- Table data -->
                            <td>{{ student.createdAt|date('d M Y') }}</td>

                            <!-- Table data -->
                            <td>
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item me-0 small"><i class="fas fa-star text-warning"></i></li>
                                    <li class="list-inline-item ms-1 h6 mb-0 fw-light">{{ student.rating }}</li>
                                </ul>
                            </td>

                            <!-- Table data -->
                            <td>{{ student.user.email }}</td>

                            <!-- Table data -->
                            <td>
                                <a href="{{ path('app_admin_student_show', {id: student.id}) }}" class="btn btn-sm btn-info-soft me-1" title="View"><i class="bi bi-eye"></i></a>
                                <a href="{{ path('app_admin_student_edit', {id: student.id}) }}" class="btn btn-sm btn-success-soft me-1" title="Edit"><i class="bi bi-pencil-square"></i></a>
                                <form method="post" action="{{ path('app_admin_student_delete', {id: student.id}) }}" onsubmit="return confirm('Are you sure?');" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.id) }}">
                                    <button class="btn btn-sm btn-danger-soft" title="Delete"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No students found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!-- Card body END -->

    <!-- Card footer START -->
    <div class="card-footer bg-transparent pt-0">
        <!-- Pagination -->
        <div class="d-sm-flex justify-content-between align-items-center">
            <!-- Content -->
            <p class="mb-0 text-center text-sm-start">Showing {{ students.currentPageNumber }} of {{ students.getTotalItemCount }}</p>
            <!-- Pagination -->
            {{ knp_pagination_render(students) }}
        </div>
    </div>
    <!-- Card footer END -->
</div>
{% endblock %}
