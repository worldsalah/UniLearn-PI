{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ student.fullName }} - Student Profile{% endblock %}

{% block admin_content %}
<!-- Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-sm-flex justify-content-between align-items-center">
            <h1 class="h3 mb-2 mb-sm-0">Student Profile</h1>
            <div class="d-flex gap-2">
                <a href="{{ path('app_admin_student_edit', {'id': student.id}) }}" class="btn btn-sm btn-primary mb-0">
                    <i class="fas fa-edit me-1"></i>Edit Profile
                </a>
                <a href="{{ path('app_admin_student_index') }}" class="btn btn-sm btn-secondary mb-0">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-sm-6 col-lg-3">
        <div class="card card-body bg-warning bg-opacity-10 border border-warning border-opacity-25 p-4 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0 fw-bold">{{ student.products|length }}</h4>
                    <span class="h6 fw-light mb-0">Services</span>
                </div>
                <div class="icon-lg rounded-circle bg-warning text-white">
                    <i class="fas fa-briefcase fa-fw"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-sm-6 col-lg-3">
        <div class="card card-body bg-success bg-opacity-10 border border-success border-opacity-25 p-4 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0 fw-bold">{{ student.rating|number_format(1) }}</h4>
                    <span class="h6 fw-light mb-0">Rating</span>
                </div>
                <div class="icon-lg rounded-circle bg-success text-white">
                    <i class="fas fa-star fa-fw"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-sm-6 col-lg-3">
        <div class="card card-body bg-info bg-opacity-10 border border-info border-opacity-25 p-4 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0 fw-bold">{{ student.skills|length }}</h4>
                    <span class="h6 fw-light mb-0">Skills</span>
                </div>
                <div class="icon-lg rounded-circle bg-info text-white">
                    <i class="fas fa-code fa-fw"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-sm-6 col-lg-3">
        <div class="card card-body bg-primary bg-opacity-10 border border-primary border-opacity-25 p-4 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0 fw-bold">{{ student.createdAt|date('M Y') }}</h4>
                    <span class="h6 fw-light mb-0">Member Since</span>
                </div>
                <div class="icon-lg rounded-circle bg-primary text-white">
                    <i class="fas fa-calendar fa-fw"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Left Column: Profile Info -->
    <div class="col-lg-4">
        <!-- Profile Card -->
        <div class="card shadow mb-4">
            <div class="card-body text-center p-4">
                <div class="avatar avatar-xxl mb-3">
                    <img class="avatar-img rounded-circle border border-3 border-white shadow" 
                         src="{{ asset('assets/images/avatar/01.jpg') }}" alt="{{ student.fullName }}">
                </div>
                <h4 class="mb-1">{{ student.fullName }}</h4>
                <p class="text-muted mb-3">Student / Freelancer</p>
                
                <!-- Rating Stars -->
                <div class="mb-3">
                    {% set fullStars = student.rating|round(0, 'floor') %}
                    {% set hasHalfStar = (student.rating - fullStars) >= 0.5 %}
                    {% for i in 1..5 %}
                        {% if i <= fullStars %}
                            <i class="fas fa-star text-warning"></i>
                        {% elseif i == (fullStars + 1) and hasHalfStar %}
                            <i class="fas fa-star-half-alt text-warning"></i>
                        {% else %}
                            <i class="far fa-star text-warning"></i>
                        {% endif %}
                    {% endfor %}
                    <span class="ms-2 fw-bold">{{ student.rating|number_format(1) }}</span>
                </div>
                
                <div class="d-flex justify-content-center gap-2 mb-3">
                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2">
                        <i class="fas fa-check-circle me-1"></i>Active
                    </span>
                </div>
            </div>
        </div>
        
        <!-- Contact Info Card -->
        <div class="card shadow">
            <div class="card-header border-bottom bg-light">
                <h5 class="card-header-title mb-0">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Contact Information
                </h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-start px-0 pb-3">
                        <div class="ms-0 me-auto">
                            <div class="text-muted small mb-1">Email Address</div>
                            <div class="fw-bold">{{ student.user.email }}</div>
                        </div>
                        <i class="fas fa-envelope text-primary"></i>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start px-0 pb-3">
                        <div class="ms-0 me-auto">
                            <div class="text-muted small mb-1">Member Since</div>
                            <div class="fw-bold">{{ student.createdAt|date('F d, Y') }}</div>
                        </div>
                        <i class="fas fa-calendar-alt text-primary"></i>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start px-0">
                        <div class="ms-0 me-auto">
                            <div class="text-muted small mb-1">User ID</div>
                            <div class="fw-bold">#{{ student.id }}</div>
                        </div>
                        <i class="fas fa-id-card text-primary"></i>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    <!-- Right Column: Details -->
    <div class="col-lg-8">
        <!-- Biography Card -->
        <div class="card shadow mb-4">
            <div class="card-header border-bottom bg-light">
                <h5 class="card-header-title mb-0">
                    <i class="fas fa-user me-2 text-primary"></i>About {{ student.fullName }}
                </h5>
            </div>
            <div class="card-body">
                {% if student.bio %}
                    <p class="mb-0">{{ student.bio }}</p>
                {% else %}
                    <div class="text-center py-4">
                        <i class="fas fa-user-edit fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">No biography available for this student.</p>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Skills Card -->
        <div class="card shadow mb-4">
            <div class="card-header border-bottom bg-light">
                <h5 class="card-header-title mb-0">
                    <i class="fas fa-code me-2 text-primary"></i>Skills & Expertise
                </h5>
            </div>
            <div class="card-body">
                {% if student.skills is not empty %}
                    <div class="d-flex flex-wrap gap-2">
                        {% for skill in student.skills %}
                            <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 fs-6">
                                <i class="fas fa-check-circle me-1"></i>{{ skill }}
                            </span>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="fas fa-tools fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">No skills listed yet.</p>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Services/Products Card -->
        <div class="card shadow">
            <div class="card-header border-bottom bg-light">
                <h5 class="card-header-title mb-0">
                    <i class="fas fa-briefcase me-2 text-primary"></i>Services Offered ({{ student.products|length }})
                </h5>
            </div>
            <div class="card-body">
                {% if student.products is not empty %}
                    <div class="row g-3">
                        {% for product in student.products %}
                            <div class="col-md-6">
                                <div class="card border h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0">{{ product.title }}</h6>
                                            <span class="badge bg-success">${{ product.price }}</span>
                                        </div>
                                        <p class="text-muted small mb-2">{{ product.description|slice(0, 80) }}{% if product.description|length > 80 %}...{% endif %}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-primary bg-opacity-10 text-primary">{{ product.category }}</span>
                                            <a href="{{ path('app_product_show', {'slug': product.slug}) }}" class="btn btn-sm btn-outline-primary">
                                                View <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">No services offered yet.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
