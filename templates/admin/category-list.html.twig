{% extends 'admin/base_admin.html.twig' %}

{% block title %}Categories - Admin{% endblock %}

{% block admin_styles %}
<style>
/* Notification Styles - Top Right */
.notification-toast {
    position: fixed;
    top: 20px;
    right: 20px;
    left: auto;
    z-index: 9999;
    min-width: 300px;
    max-width: 400px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    border: none;
    animation: slideInRight 0.3s ease-out;
}

.notification-toast .alert-success {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
}

.notification-toast .alert-danger {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
}

.notification-toast .alert-info {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
}

.notification-toast .alert-warning {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
}

@keyframes slideInRight {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

.notification-toast.fade-out {
    animation: slideOutRight 0.3s ease-out forwards;
}

@keyframes slideOutRight {
    from {
        transform: translateX(0);
        opacity: 1;
    }
    to {
        transform: translateX(100%);
        opacity: 0;
    }
}
</style>
{% endblock %}

{% block admin_scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-dismiss notifications after 5 seconds
    const notifications = document.querySelectorAll('.notification-toast');
    notifications.forEach(function(notification) {
        setTimeout(function() {
            notification.classList.add('fade-out');
            setTimeout(function() {
                notification.remove();
            }, 300);
        }, 5000);
    });
});
</script>
{% endblock %}

{% block admin_content %}
<!-- Flash Messages - Top Right Notification -->
{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show notification-toast" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-{{ type == 'error' ? 'exclamation-triangle' : (type == 'success' ? 'check-circle' : 'info-circle') }} me-2"></i>
                <div>{{ message }}</div>
            </div>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<!-- Title -->
<div class="row mb-4">
    <div class="col-12 d-sm-flex justify-content-between align-items-center">
        <h1 class="h3 mb-2 mb-sm-0">Categories Management</h1>
        <div>
            <a href="{{ path('admin_category_new') }}" class="btn btn-sm btn-primary mb-0">
                <i class="bi bi-plus-circle me-1"></i>Add New Category
            </a>
        </div>
    </div>
</div>

<!-- Categories list -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-tags me-2"></i>All Categories
                </h5>
            </div>
            <div class="card-body">
                {% if categories|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Icon</th>
                                    <th>Color</th>
                                    <th>Courses</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for categoryData in categories %}
                                    {% set category = categoryData[0] %}
                                    {% set courseCount = categoryData.courseCount %}
                                    <tr>
                                        <td>
                                            <strong>{{ category.name }}</strong>
                                        </td>
                                        <td>
                                            <span class="text-muted">{{ category.description|default('No description')|slice(0, 50) }}{% if category.description|length > 50 %}...{% endif %}</span>
                                        </td>
                                        <td>
                                            {% if category.icon %}
                                                <i class="{{ category.icon }}"></i>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if category.color %}
                                                <span class="badge" style="background-color: {{ category.color }}; color: white;">
                                                    {{ category.color }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                {{ courseCount }} courses
                                            </span>
                                        </td>
                                        <td>
                                            {% if category.isActive %}
                                                <span class="badge bg-success">Active</span>
                                            {% else %}
                                                <span class="badge bg-secondary">Inactive</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <small class="text-muted">{{ category.createdAt|date('M d, Y') }}</small>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-outline-primary me-2" title="Edit Category">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <form method="post" action="{{ path('admin_category_delete', {'id': category.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this category: {{ category.name }}?{% if courseCount > 0 %} This category contains {{ courseCount }} course(s) that will also be affected!{% endif %}');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Category{% if courseCount > 0 %} ({{ courseCount }} courses){% endif %}">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-tags fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No categories found</h5>
                        <p class="text-muted">Start by adding your first category.</p>
                        <a href="{{ path('admin_category_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Add First Category
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
