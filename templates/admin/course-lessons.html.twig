{% extends 'admin/base_admin.html.twig' %}

{% block title %}Course Lessons - Admin{% endblock %}

{% block admin_content %}
<!-- Title -->
<div class="row mb-4">
    <div class="col-12 d-sm-flex justify-content-between align-items-center">
        <h1 class="h3 mb-2 mb-sm-0">Course Lessons</h1>
        <div>
            <a href="{{ path('admin_course_show', {'id': course.id}) }}" class="btn btn-sm btn-secondary mb-0 me-2 action-btn">
                <i class="bi bi-arrow-left me-1"></i>Back to Course
            </a>
            <a href="{{ path('admin_course_list') }}" class="btn btn-sm btn-secondary mb-0 action-btn">
                <i class="bi bi-list me-1"></i>All Courses
            </a>
        </div>
    </div>
</div>

<!-- Course info START -->
<div class="row mb-4">
    <div class="col-12">
        <div class="info-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h2 class="h4 mb-2">{{ course.title|default('Untitled Course') }}</h2>
                        <div class="d-flex flex-wrap align-items-center gap-3">
                            <span class="badge bg-primary bg-opacity-10 text-primary">{{ course.category|default('Uncategorized') }}</span>
                            <span class="badge bg-info bg-opacity-10 text-info">{{ course.level|default('Not Specified') }}</span>
                            <span class="badge {% if course.status == 'live' %}bg-success{% elseif course.status == 'pending' %}bg-warning{% elseif course.status == 'inactive' %}bg-secondary{% else %}bg-danger{% endif %} bg-opacity-15 text-{{ course.status == 'live' ? 'success' : course.status == 'pending' ? 'warning' : course.status == 'inactive' ? 'secondary' : 'danger' }}">
                                {{ course.status|default('unknown')|capitalize }}
                            </span>
                        </div>
                    </div>
                    <div class="text-end">
                        <h3 class="h2 text-primary mb-0">${{ course.price|number_format(2, '.', ',') }}</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Course info END -->

<!-- Lessons content START -->
<div class="row">
    <div class="col-12">
        {% if chapters|length > 0 %}
            {% for chapter in chapters %}
            <div class="info-card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-book me-2"></i>Chapter {{ loop.index }}: {{ chapter.title|default('Untitled Chapter') }}
                        <span class="badge bg-primary bg-opacity-10 text-primary ms-2">{{ chapter.lessonCount }} Lessons</span>
                    </h5>
                </div>
                <div class="card-body">
                    {% if chapter.lessons|length > 0 %}
                        <div class="lessons-list">
                            {% for lesson in chapter.lessons %}
                            <div class="lesson-item d-flex align-items-center p-3 mb-3 bg-light rounded">
                                <div class="lesson-number me-3">
                                    <span class="badge bg-primary">{{ loop.index }}</span>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">{{ lesson.title|default('Untitled Lesson') }}</h6>
                                    {% if lesson.content %}
                                    <p class="text-muted small mb-0">{{ lesson.content|slice(0, 150) }}{% if lesson.content|length > 150 %}...{% endif %}</p>
                                    {% endif %}
                                </div>
                                <div class="lesson-meta">
                                    {% if lesson.duration %}
                                    <span class="badge bg-info bg-opacity-10 text-info">
                                        <i class="bi bi-clock me-1"></i>{{ lesson.duration }} min
                                    </span>
                                    {% endif %}
                                    <a href="#" class="btn btn-sm btn-outline-primary ms-2">
                                        <i class="bi bi-eye me-1"></i>View
                                    </a>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            No lessons available for this chapter yet.
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        {% else %}
        <div class="info-card">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-book display-1 text-muted"></i>
                </div>
                <h4 class="mb-3">No Chapters Available</h4>
                <p class="text-muted mb-4">This course doesn't have any chapters or lessons yet.</p>
                <a href="#" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add First Chapter
                </a>
            </div>
        </div>
        {% endif %}
    </div>
</div>
<!-- Lessons content END -->
{% endblock %}

{% block admin_scripts %}
<script>
// Add any JavaScript for lesson management here
document.addEventListener('DOMContentLoaded', function() {
    // Add interactive features for lessons
    const lessonItems = document.querySelectorAll('.lesson-item');
    
    lessonItems.forEach(item => {
        item.addEventListener('click', function(e) {
            if (!e.target.closest('a')) {
                // Toggle lesson details or expand content
                this.classList.toggle('expanded');
            }
        });
    });
});
</script>
{% endblock %}
