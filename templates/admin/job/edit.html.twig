{% extends 'admin/base_admin.html.twig' %}

{% block title %}Edit Job - Admin{% endblock %}

{% block admin_content %}
<!-- Title -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Edit Job: {{ job.title }}</h1>
            <a href="{{ path('app_admin_job_index') }}" class="btn btn-secondary mb-0">Back to List</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card bg-transparent">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row g-3">
                        <div class="col-md-12">
                            {{ form_row(form.title, {
                                'label': 'Job Title',
                                'attr': {'class': 'form-control', 'placeholder': 'Enter job title'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.location, {
                                'label': 'Location',
                                'attr': {'class': 'form-control', 'placeholder': 'e.g. Remote, New York, NY'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.budget, {
                                'label': 'Budget ($)',
                                'attr': {'class': 'form-control', 'placeholder': '0.00'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.type, {
                                'label': 'Job Type',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.experienceLevel, {
                                'label': 'Experience Level',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.duration, {
                                'label': 'Duration',
                                'attr': {'class': 'form-control', 'placeholder': 'e.g. 3 months, 6 weeks'}
                            }) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.description, {
                                'label': 'Job Description',
                                'attr': {'class': 'form-control', 'rows': '6', 'placeholder': 'Describe the job requirements, responsibilities, and qualifications...'}
                            }) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.requirements, {
                                'label': 'Requirements',
                                'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'List specific skills, qualifications, or experience required...'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.status, {
                                'label': 'Status',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.skills, {
                                'label': 'Required Skills',
                                'attr': {'class': 'form-control', 'placeholder': 'e.g. PHP, JavaScript, Project Management (comma separated)'}
                            }) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a href="{{ path('app_admin_job_index') }}" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Update Job</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<!-- Delete Section -->
<div class="row mt-4">
    <div class="col-lg-8 mx-auto">
        <div class="card bg-transparent border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 text-danger">Danger Zone</h5>
                        <p class="text-muted mb-0">Once you delete a job, there is no going back.</p>
                    </div>
                    <form method="post" action="{{ path('app_admin_job_delete', {id: job.id}) }}" onsubmit="return confirm('Are you sure you want to delete this job? This action cannot be undone.');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
                        <button type="submit" class="btn btn-danger">Delete Job</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
