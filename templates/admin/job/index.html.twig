{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Jobs - Admin{% endblock %}

{% block admin_content %}
<!-- Title -->
<div class="row">
    <div class="col-12 mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-2 mb-sm-0">Jobs Management</h1>
            <a href="{{ path('app_admin_job_new') }}" class="btn btn-primary mb-0">Add New Job</a>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card bg-transparent">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="mb-0">Total Jobs</h6>
                        <h3 class="mb-0">{{ applicationStats.totalApplications }}</h3>
                    </div>
                    <div class="text-primary">
                        <i class="fas fa-briefcase fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-transparent">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="mb-0">Pending</h6>
                        <h3 class="mb-0 text-warning">{{ applicationStats.applicationsByStatus.pending }}</h3>
                    </div>
                    <div class="text-warning">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-transparent">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="mb-0">Accepted</h6>
                        <h3 class="mb-0 text-success">{{ applicationStats.applicationsByStatus.accepted }}</h3>
                    </div>
                    <div class="text-success">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-transparent">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="mb-0">Rejected</h6>
                        <h3 class="mb-0 text-danger">{{ applicationStats.applicationsByStatus.rejected }}</h3>
                    </div>
                    <div class="text-danger">
                        <i class="fas fa-times-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card bg-transparent">
    <!-- Card header START -->
    <div class="card-header bg-transparent border-bottom px-0">
        <!-- Search and select START -->
        <div class="row g-3 align-items-center justify-content-between">
            <!-- Search bar -->
            <div class="col-md-8">
                <form class="rounded position-relative" method="get">
                    <input class="form-control bg-transparent" type="search" name="search" value="{{ search }}" placeholder="Search jobs..." aria-label="Search">
                    <button class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-primary-hover text-reset" type="submit">
                        <i class="fas fa-search fs-6"></i>
                    </button>
                </form>
            </div>
        </div>
        <!-- Search and select END -->
    </div>
    <!-- Card header END -->

    <!-- Card body START -->
    <div class="card-body px-0">
        <div class="table-responsive border-0">
            <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                <!-- Table head -->
                <thead>
                    <tr>
                        <th scope="col" class="border-0 rounded-start">Job Info</th>
                        <th scope="col" class="border-0">Client</th>
                        <th scope="col" class="border-0">Budget</th>
                        <th scope="col" class="border-0">Applications</th>
                        <th scope="col" class="border-0">Status</th>
                        <th scope="col" class="border-0">Posted</th>
                        <th scope="col" class="border-0 rounded-end">Action</th>
                    </tr>
                </thead>

                <!-- Table body START -->
                <tbody>
                    {% for job in jobs %}
                        <tr>
                            <!-- Table data -->
                            <td>
                                <div class="d-flex align-items-center position-relative">
                                    <div class="mb-0 ms-3">
                                        <!-- Title -->
                                        <h6 class="mb-0"><a href="#" class="stretched-link">{{ job.title }}</a></h6>
                                        <span class="text-body small"><i class="fas fa-fw fa-map-marker-alt me-1"></i>{{ job.location ?? 'Remote' }}</span>
                                    </div>
                                </div>
                            </td>

                            <!-- Table data -->
                            <td>
                                {% if job.client %}
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-2">
                                            <div class="avatar-img rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center">
                                                <span class="fw-bold">{{ job.client.name|slice(0, 1)|upper }}</span>
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ job.client.name }}</h6>
                                            <small class="text-muted">{{ job.client.email }}</small>
                                        </div>
                                    </div>
                                {% else %}
                                    <span class="text-muted">No client</span>
                                {% endif %}
                            </td>

                            <!-- Table data -->
                            <td>
                                <span class="h6 mb-0 fw-light">${{ job.budget|number_format(2) }}</span>
                            </td>

                            <!-- Table data -->
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-info">{{ job.applicationCount ?? 0 }} applications</span>
                            </td>

                            <!-- Table data -->
                            <td>
                                {% if job.status == 'open' %}
                                    <span class="badge bg-success bg-opacity-10 text-success">Open</span>
                                {% elseif job.status == 'closed' %}
                                    <span class="badge bg-danger bg-opacity-10 text-danger">Closed</span>
                                {% else %}
                                    <span class="badge bg-warning bg-opacity-10 text-warning">{{ job.status }}</span>
                                {% endif %}
                            </td>

                            <!-- Table data -->
                            <td>
                                <span class="text-body small"><i class="fas fa-fw fa-calendar-alt me-1"></i>{{ job.createdAt|date('d M Y') }}</span>
                            </td>

                            <!-- Table data -->
                            <td>
                                <a href="{{ path('app_admin_job_show', {id: job.id}) }}" class="btn btn-sm btn-info-soft me-1" title="View"><i class="bi bi-eye"></i></a>
                                <a href="{{ path('app_admin_job_edit', {id: job.id}) }}" class="btn btn-sm btn-success-soft me-1" title="Edit"><i class="bi bi-pencil-square"></i></a>
                                <form method="post" action="{{ path('app_admin_job_delete', {id: job.id}) }}" onsubmit="return confirm('Are you sure you want to delete this job?');" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
                                    <button class="btn btn-sm btn-danger-soft" title="Delete"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No jobs found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!-- Card body END -->

    <!-- Card footer START -->
    <div class="card-footer bg-transparent pt-0">
        <!-- Pagination -->
        <div class="d-sm-flex justify-content-between align-items-center">
            <!-- Content -->
            <p class="mb-0 text-center text-sm-start">Showing {{ jobsPaginator.currentPageNumber }} of {{ jobsPaginator.getTotalItemCount }}</p>
            <!-- Pagination -->
            {{ knp_pagination_render(jobsPaginator) }}
        </div>
    </div>
    <!-- Card footer END -->
</div>
{% endblock %}
