{% extends 'admin/base_admin.html.twig' %}

{% block title %}Edit Order #{{ order.id }} - Admin{% endblock %}

{% block admin_content %}
<!-- Title -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Edit Order #{{ order.id }}</h1>
            <a href="{{ path('app_admin_order_index') }}" class="btn btn-secondary mb-0">Back to List</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card bg-transparent">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_row(form.buyer, {
                                'label': 'Customer',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.product, {
                                'label': 'Product/Service',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.totalPrice, {
                                'label': 'Amount ($)',
                                'attr': {'class': 'form-control', 'placeholder': '0.00'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.status, {
                                'label': 'Order Status',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.rating, {
                                'label': 'Rating (1-5)',
                                'attr': {'class': 'form-control', 'min': '1', 'max': '5'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.review, {
                                'label': 'Customer Review',
                                'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Enter customer review...'}
                            }) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a href="{{ path('app_admin_order_index') }}" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Update Order</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<!-- Order Summary -->
<div class="row mt-4">
    <div class="col-lg-8 mx-auto">
        <div class="card bg-transparent border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 text-info">Order Summary</h5>
                        <p class="text-muted mb-0">Order #{{ order.id }} created on {{ order.createdAt|date('M d, Y') }}</p>
                    </div>
                    <div class="text-end">
                        <h4 class="text-info mb-0">${{ order.totalPrice|number_format(2) }}</h4>
                        <span class="badge bg-info bg-opacity-10 text-info">{{ order.status|title }}</span>
                    </div>
                </div>
                
                <!-- Customer and Product Info -->
                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Customer</small>
                            <div class="d-flex align-items-center mt-1">
                                <div class="avatar avatar-sm me-2">
                                    <div class="avatar-img rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center">
                                        <span class="fw-bold">{{ order.buyer.name|slice(0, 1)|upper }}</span>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-0">{{ order.buyer.name }}</h6>
                                    <small class="text-muted">{{ order.buyer.email }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Product</small>
                            <div class="d-flex align-items-center mt-1">
                                {% if order.product.image %}
                                    <div class="w-30px me-2">
                                        <img src="{{ vich_uploader_asset(order.product, 'imageFile')|default(asset('assets/images/courses/4by3/08.jpg')) }}" class="rounded" alt="">
                                    </div>
                                {% endif %}
                                <div>
                                    <h6 class="mb-0">{{ order.product.title }}</h6>
                                    <small class="text-muted">{{ order.product.category.name }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Section -->
<div class="row mt-4">
    <div class="col-lg-8 mx-auto">
        <div class="card bg-transparent border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 text-danger">Danger Zone</h5>
                        <p class="text-muted mb-0">Once you delete an order, there is no going back.</p>
                    </div>
                    <form method="post" action="{{ path('app_admin_order_delete', {id: order.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order? This action cannot be undone.');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                        <button type="submit" class="btn btn-danger">Delete Order</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
