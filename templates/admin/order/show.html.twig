{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{ "Order #" ~ order.id }} - Order Details - Admin{% endblock %}

{% block admin_content %}
<!-- Title -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-2">Order #{{ order.id }}</h1>
                <p class="text-muted mb-0">Order Details - Admin View</p>
            </div>
            <div>
                <a href="{{ path('app_admin_order_index') }}" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
                <a href="{{ path('app_admin_order_edit', {id: order.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i>Edit Order
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Order Details -->
<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Order Card -->
        <div class="card bg-transparent mb-4">
            <div class="card-body">
                <!-- Order Header -->
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h2 class="mb-2">Order #{{ order.id }}</h2>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="text-muted small"><i class="fas fa-fw fa-calendar-alt me-1"></i>{{ order.createdAt|date('d M Y') }}</span>
                            <span class="text-muted small"><i class="fas fa-fw fa-clock me-1"></i>{{ order.createdAt|date('H:i') }}</span>
                        </div>
                    </div>
                    <div class="text-end">
                        <h3 class="text-primary mb-0">${{ order.totalPrice|number_format(2) }}</h3>
                        {% if order.status == 'pending' %}
                            <span class="badge bg-warning bg-opacity-10 text-warning">Pending</span>
                        {% elseif order.status == 'paid' %}
                            <span class="badge bg-info bg-opacity-10 text-info">Paid</span>
                        {% elseif order.status == 'completed' %}
                            <span class="badge bg-success bg-opacity-10 text-success">Completed</span>
                        {% elseif order.status == 'cancelled' %}
                            <span class="badge bg-danger bg-opacity-10 text-danger">Cancelled</span>
                        {% else %}
                            <span class="badge bg-secondary bg-opacity-10 text-secondary">{{ order.status }}</span>
                        {% endif %}
                    </div>
                </div>
                
                <!-- Product Information -->
                {% if order.product %}
                <div class="mb-4">
                    <h5 class="mb-3">Product Information</h5>
                    <div class="bg-light rounded p-3">
                        <div class="d-flex align-items-center">
                            {% if order.product.image %}
                                <div class="w-60px me-3">
                                    <img src="{{ vich_uploader_asset(order.product, 'imageFile')|default(asset('assets/images/courses/4by3/08.jpg')) }}" class="rounded" alt="">
                                </div>
                            {% endif %}
                            <div class="flex-grow-1">
                                <h6 class="mb-1">{{ order.product.title }}</h6>
                                <p class="text-muted mb-1">{{ order.product.category.name }}</p>
                                <div class="d-flex align-items-center">
                                    <small class="text-muted me-3">Freelancer:</small>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-2">
                                            <div class="avatar-img rounded-circle bg-success bg-opacity-10 text-success d-flex align-items-center justify-content-center">
                                                <span class="fw-bold">{{ order.product.freelancer.name|slice(0, 1)|upper }}</span>
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ order.product.freelancer.name }}</h6>
                                            <small class="text-muted">{{ order.product.freelancer.role.name }}</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                
                <!-- Order Review -->
                {% if order.review %}
                <div class="mb-4">
                    <h5 class="mb-3">Customer Review</h5>
                    <div class="bg-light rounded p-3">
                        {% if order.rating %}
                            <div class="mb-2">
                                {% for i in 1..5 %}
                                    {% if i <= order.rating %}
                                        <i class="fas fa-star text-warning"></i>
                                    {% else %}
                                        <i class="far fa-star text-warning"></i>
                                    {% endif %}
                                {% endfor %}
                                <span class="ms-2">{{ order.rating }}/5</span>
                            </div>
                        {% endif %}
                        <p class="mb-0">{{ order.review }}</p>
                    </div>
                </div>
                {% endif %}
                
                <!-- Order Metadata -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Order ID</small>
                            <strong>#{{ order.id }}</strong>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Total Amount</small>
                            <strong class="text-primary">${{ order.totalPrice|number_format(2) }}</strong>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Status</small>
                            <strong>{{ order.status|title }}</strong>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Created Date</small>
                            <strong>{{ order.createdAt|date('M d, Y') }}</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Customer Information -->
        <div class="card bg-transparent">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Customer Information</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="avatar avatar-lg me-3">
                        <div class="avatar-img rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center">
                            <span class="fw-bold fs-4">{{ order.buyer.name|slice(0, 1)|upper }}</span>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">{{ order.buyer.name }}</h6>
                        <p class="text-muted mb-1">{{ order.buyer.email }}</p>
                        <div class="d-flex gap-2">
                            <span class="badge bg-primary bg-opacity-10 text-primary">{{ order.buyer.role.name }}</span>
                            <span class="badge bg-success bg-opacity-10 text-success">{{ order.buyer.status }}</span>
                        </div>
                    </div>
                    <div>
                        <a href="{{ path('app_admin_student_show', {id: order.buyer.id}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-user me-1"></i>View Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card bg-transparent mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('app_admin_order_edit', {id: order.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Order
                    </a>
                    <button class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#statusModal">
                        <i class="fas fa-toggle-on me-2"></i>Change Status
                    </button>
                    <button class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#reviewModal">
                        <i class="fas fa-star me-2"></i>Add Review
                    </button>
                    <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Delete Order
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Order Statistics -->
        <div class="card bg-transparent mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Order Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3 text-center">
                    <div class="col-6">
                        <div class="bg-light rounded p-3">
                            <h4 class="text-primary mb-0">${{ order.totalPrice|number_format(0) }}</h4>
                            <small class="text-muted d-block">Total Amount</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-light rounded p-3">
                            <h4 class="text-info mb-0">{{ order.rating|default('N/A') }}</h4>
                            <small class="text-muted d-block">Rating</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-light rounded p-3">
                            <h4 class="text-success mb-0">{{ order.createdAt|date('d') }}</h4>
                            <small class="text-muted d-block">Day</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-light rounded p-3">
                            <h4 class="text-warning mb-0">{{ order.createdAt|date('M') }}</h4>
                            <small class="text-muted d-block">Month</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Timeline -->
        <div class="card bg-transparent">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Order Timeline</h5>
            </div>
            <div class="card-body">
                <div class="timeline timeline-dots">
                    <div class="timeline-item">
                        <div class="timeline-dot bg-success"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Order Created</h6>
                            <p class="text-muted small mb-0">{{ order.createdAt|date('M d, Y H:i') }}</p>
                        </div>
                    </div>
                    {% if order.status == 'paid' or order.status == 'completed' %}
                    <div class="timeline-item">
                        <div class="timeline-dot bg-info"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Payment Received</h6>
                            <p class="text-muted small mb-0">Order marked as paid</p>
                        </div>
                    </div>
                    {% endif %}
                    {% if order.status == 'completed' %}
                    <div class="timeline-item">
                        <div class="timeline-dot bg-success"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Order Completed</h6>
                            <p class="text-muted small mb-0">Service delivered successfully</p>
                        </div>
                    </div>
                    {% endif %}
                    {% if order.status == 'cancelled' %}
                    <div class="timeline-item">
                        <div class="timeline-dot bg-danger"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Order Cancelled</h6>
                            <p class="text-muted small mb-0">Order was cancelled</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <i class="fas fa-exclamation-triangle text-warning fa-3x mb-3"></i>
                    <h6>Are you sure you want to delete this order?</h6>
                    <p class="text-muted mb-0">Order #{{ order.id }}</p>
                    <small class="text-danger">This action cannot be undone.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" action="{{ path('app_admin_order_delete', {id: order.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                    <button type="submit" class="btn btn-danger">Delete Order</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Status Change Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Change Order Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Current Status</label>
                    <div>
                        <span class="badge bg-warning bg-opacity-10 text-warning">{{ order.status|title }}</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">New Status</label>
                    <form method="post" action="{{ path('app_admin_order_edit', {id: order.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ order.id) }}">
                        <select name="status" class="form-select">
                            <option value="pending" {% if order.status == 'pending' %}selected{% endif %}>Pending</option>
                            <option value="paid" {% if order.status == 'paid' %}selected{% endif %}>Paid</option>
                            <option value="completed" {% if order.status == 'completed' %}selected{% endif %}>Completed</option>
                            <option value="cancelled" {% if order.status == 'cancelled' %}selected{% endif %}>Cancelled</option>
                        </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Update Status</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">Add Customer Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="{{ path('app_admin_order_edit', {id: order.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ order.id) }}">
                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <select name="rating" class="form-select">
                            <option value="5">5 Stars - Excellent</option>
                            <option value="4">4 Stars - Very Good</option>
                            <option value="3">3 Stars - Good</option>
                            <option value="2">2 Stars - Fair</option>
                            <option value="1">1 Star - Poor</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Review</label>
                        <textarea name="review" class="form-control" rows="4" placeholder="Enter customer review...">{{ order.review }}</textarea>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Review</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 8px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e9ecef;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-dot {
    position: absolute;
    left: -22px;
    top: 0;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid #fff;
}

.timeline-content {
    background: #f8f9fa;
    padding: 10px;
    border-radius: 5px;
}
</style>
{% endblock %}
