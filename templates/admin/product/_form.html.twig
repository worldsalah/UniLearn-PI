<div class="card shadow">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title, {
                        'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre du service'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_label(form.category, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_errors(form.category) }}
                    {{ form_widget(form.category, {
                        'attr': {'class': 'form-select'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_label(form.price, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_errors(form.price) }}
                    {{ form_widget(form.price, {
                        'attr': {'class': 'form-control', 'placeholder': '0.00'}
                    }) }}
                </div>
                <div class="col-12">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description, {
                        'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'DÃ©crivez le service...'}
                    }) }}
                </div>
                <div class="col-12">
                    {{ form_label(form.imageFile, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_errors(form.imageFile) }}
                    {{ form_widget(form.imageFile, {
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="{{ path('app_admin_product_index') }}" class="btn btn-secondary">Annuler</a>
                <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer les modifications') }}</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
