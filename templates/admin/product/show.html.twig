{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{ product.title }} - Service Details - Admin{% endblock %}

{% block admin_content %}
<!-- Title -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-2">{{ product.title }}</h1>
                <p class="text-muted mb-0">Service Details - Admin View</p>
            </div>
            <div>
                <a href="{{ path('app_admin_product_index') }}" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
                <a href="{{ path('app_admin_product_edit', {id: product.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i>Edit Service
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Service Details -->
<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Service Card -->
        <div class="card bg-transparent mb-4">
            <div class="card-body">
                <!-- Service Image -->
                {% if product.image %}
                    <div class="mb-4">
                        <img src="{{ vich_uploader_asset(product, 'imageFile') }}" class="img-fluid rounded" alt="{{ product.title }}">
                    </div>
                {% endif %}
                
                <!-- Service Header -->
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h2 class="mb-2">{{ product.title }}</h2>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-info bg-opacity-10 text-info">{{ product.category.name }}</span>
                            <span class="text-muted small"><i class="fas fa-calendar-alt me-1"></i>{{ product.createdAt|date('d M Y') }}</span>
                            <span class="badge bg-success bg-opacity-10 text-success">Active</span>
                        </div>
                    </div>
                    <div class="text-end">
                        <h3 class="text-primary mb-0">${{ product.price|number_format(2) }}</h3>
                    </div>
                </div>
                
                <!-- Service Description -->
                <div class="mb-4">
                    <h5 class="mb-3">Service Description</h5>
                    <div class="bg-light rounded p-3">
                        {{ product.description|raw }}
                    </div>
                </div>
                
                <!-- Service Metadata -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Service ID</small>
                            <strong>#{{ product.id }}</strong>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Slug</small>
                            <strong>{{ product.slug }}</strong>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Category</small>
                            <strong>{{ product.category.name }}</strong>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <small class="text-muted d-block">Price</small>
                            <strong class="text-primary">${{ product.price|number_format(2) }}</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Freelancer Information -->
        <div class="card bg-transparent">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Freelancer Information</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="avatar avatar-lg me-3">
                        <div class="avatar-img rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center">
                            <span class="fw-bold fs-4">{{ product.freelancer.name|slice(0, 1)|upper }}</span>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">{{ product.freelancer.name }}</h6>
                        <p class="text-muted mb-1">{{ product.freelancer.email }}</p>
                        <div class="d-flex gap-2">
                            <span class="badge bg-primary bg-opacity-10 text-primary">{{ product.freelancer.role.name }}</span>
                            <span class="badge bg-success bg-opacity-10 text-success">{{ product.freelancer.status }}</span>
                        </div>
                    </div>
                    <div>
                        <a href="{{ path('app_admin_student_show', {id: product.freelancer.id}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-user me-1"></i>View Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card bg-transparent mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('app_admin_product_edit', {id: product.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Service
                    </a>
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#duplicateModal">
                        <i class="fas fa-copy me-2"></i>Duplicate Service
                    </button>
                    <button class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#statusModal">
                        <i class="fas fa-toggle-on me-2"></i>Change Status
                    </button>
                    <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Delete Service
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Service Statistics -->
        <div class="card bg-transparent mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Service Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row g-3 text-center">
                    <div class="col-6">
                        <div class="bg-light rounded p-3">
                            <h4 class="text-primary mb-0">0</h4>
                            <small class="text-muted d-block">Total Orders</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-light rounded p-3">
                            <h4 class="text-success mb-0">0</h4>
                            <small class="text-muted d-block">Revenue</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-light rounded p-3">
                            <h4 class="text-info mb-0">0</h4>
                            <small class="text-muted d-block">Views</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-light rounded p-3">
                            <h4 class="text-warning mb-0">0</h4>
                            <small class="text-muted d-block">Inquiries</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Recent Orders -->
        <div class="card bg-transparent">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Recent Orders</h5>
            </div>
            <div class="card-body">
                <div class="text-center text-muted py-4">
                    <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                    <p class="mb-0">No orders yet</p>
                    <small class="text-muted">This service hasn't received any orders</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <i class="fas fa-exclamation-triangle text-warning fa-3x mb-3"></i>
                    <h6>Are you sure you want to delete this service?</h6>
                    <p class="text-muted mb-0">{{ product.title }}</p>
                    <small class="text-danger">This action cannot be undone.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" action="{{ path('app_admin_product_delete', {id: product.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                    <button type="submit" class="btn btn-danger">Delete Service</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Status Change Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Change Service Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Current Status</label>
                    <div>
                        <span class="badge bg-success bg-opacity-10 text-success">Active</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">New Status</label>
                    <select class="form-select">
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                        <option value="pending">Pending</option>
                        <option value="suspended">Suspended</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Update Status</button>
            </div>
        </div>
    </div>
</div>

<!-- Duplicate Modal -->
<div class="modal fade" id="duplicateModal" tabindex="-1" aria-labelledby="duplicateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="duplicateModalLabel">Duplicate Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">New Service Title</label>
                    <input type="text" class="form-control" value="{{ product.title }} - Copy">
                </div>
                <div class="mb-3">
                    <label class="form-label">Freelancer</label>
                    <select class="form-select">
                        <option selected>{{ product.freelancer.name }}</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Create Duplicate</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
