    </div>
    <!-- Search and filter END -->

    <!-- Quiz table START -->
    <div class="card bg-transparent border shadow">

        <!-- Card header START -->
        <div class="card-header bg-light border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Quiz List</h5>
