{% extends 'admin/base_admin.html.twig' %}

{% block title %}Quizzes Management - Unilearn{% endblock %}

{% block admin_styles %}
<style>
/* Statistics Charts Styles */
.stats-section {
    margin-bottom: 2rem;
}

.chart-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    border: 1px solid #e9ecef;
}

.chart-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 1rem;
    text-align: center;
}

.stats-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.stats-header h2 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
}

.stats-header p {
    margin: 0.5rem 0 0 0;
    opacity: 0.9;
}

.chart-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

@media (max-width: 768px) {
    .chart-grid {
        grid-template-columns: 1fr;
    }
    
    .chart-container {
        padding: 1rem;
    }
}

/* Animations */
.chart-container {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
}

.chart-container:nth-child(1) { animation-delay: 0.1s; }
.chart-container:nth-child(2) { animation-delay: 0.2s; }
.chart-container:nth-child(3) { animation-delay: 0.3s; }

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Quiz table styles */
.table-dark-gray {
    background-color: #2c3e50;
    color: white;
}

.table-dark-gray th,
.table-dark-gray td {
    border-color: #34495e;
}

.table-hover tbody tr:hover {
    background-color: rgba(52, 73, 94, 0.1);
}

.avatar-img {
    width: 32px;
    height: 32px;
}

.table-responsive-title {
    font-size: 0.9rem;
    margin: 0;
}

.btn-round {
    border-radius: 50%;
    width: 32px;
    height: 32px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>
{% endblock %}

