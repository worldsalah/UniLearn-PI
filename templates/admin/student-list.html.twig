{% block admin_scripts %}
<script>
// AJAX search implementation
let searchTimeout;
let currentRequest = null;

document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.querySelector('input[name="search"]');
    const tableBody = document.querySelector('tbody');
    const resultsBadge = document.querySelector('.badge.bg-primary');
    
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            
            // Show loading indicator
            showLoading();
            
            searchTimeout = setTimeout(() => {
                performSearch();
            }, 300); // Reduced debounce for faster response
        });
    }
    
    // Handle filter changes with AJAX
    const statusFilter = document.getElementById('statusFilter');
    const roleFilter = document.getElementById('roleFilter');
    const sortFilter = document.getElementById('sortFilter');
    const orderFilter = document.getElementById('orderFilter');
    
    [statusFilter, roleFilter, sortFilter, orderFilter].forEach(select => {
        if (select) {
            select.addEventListener('change', function() {
                showLoading();
                performSearch();
            });
        }
    });
    
    // Handle sorting clicks with AJAX
    const sortLinks = document.querySelectorAll('th a');
    sortLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            showLoading();
            
            const url = new URL(this.href);
            updateURLParams(url.searchParams);
            performSearch();
        });
    });
});

function performSearch() {
    // Cancel previous request if still pending
    if (currentRequest) {
        currentRequest.abort();
    }
    
    // Get values from all filter elements
    const searchInput = document.querySelector('input[name="search"]');
    const statusFilter = document.getElementById('statusFilter');
    const roleFilter = document.getElementById('roleFilter');
    const sortFilter = document.getElementById('sortFilter');
    const orderFilter = document.getElementById('orderFilter');
    
    // Build URL parameters
    const urlParams = new URLSearchParams();
    
    // Add search parameter
    if (searchInput && searchInput.value.trim()) {
        urlParams.set('search', searchInput.value.trim());
    }
    
    // Add filter parameters
    if (statusFilter && statusFilter.value) {
        urlParams.set('status', statusFilter.value);
    }
    
    if (roleFilter && roleFilter.value) {
        urlParams.set('role', roleFilter.value);
    }
    
    if (sortFilter && sortFilter.value) {
        urlParams.set('sort', sortFilter.value);
    }
    
    if (orderFilter && orderFilter.value) {
        urlParams.set('order', orderFilter.value);
    }
    
    // Make AJAX request
    currentRequest = fetch(`/admin-student-list?${urlParams.toString()}&ajax=1`, {
        method: 'GET',
        headers: {
            'X-Requested-With': 'XMLHttpRequest',
            'Accept': 'application/json'
        }
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        updateTable(data.users);
        updateResultsCount(data.users.length);
        updateURLParams(urlParams);
        highlightSearchTerms();
    })
    .catch(error => {
        if (error.name !== 'AbortError') {
            console.error('Search error:', error);
            showError('Search failed. Please try again.');
        }
    })
    .finally(() => {
        currentRequest = null;
        hideLoading();
    });
}

function updateTable(users) {
    const tableBody = document.querySelector('tbody');
    
    if (users.length === 0) {
        tableBody.innerHTML = `
            <tr>
                <td colspan="7" class="text-center py-5">
                    <div class="text-muted">
                        <i class="bi bi-people fs-1 mb-3"></i>
                        <p class="mb-0">No users found</p>
                        <small class="text-muted">Try adjusting your search criteria</small>
                    </div>
                </td>
            </tr>
        `;
        return;
    }
    
    tableBody.innerHTML = users.map(user => `
        <tr>
            <td>
                <div class="d-flex align-items-center position-relative">
                    <div class="avatar avatar-xs flex-shrink-0">
                        <img class="avatar-img rounded-circle" src="{{ asset('assets/images/avatar/01.jpg') }}" alt="avatar">
                    </div>
                    <h6 class="table-responsive-title mb-0 ms-2">    
                        <a href="#" class="stretched-link">${escapeHtml(user.name)}</a>
                    </h6>
                </div>
            </td>
            <td>${escapeHtml(user.email)}</td>
            <td>
                ${getRoleBadge(user.role)}
            </td>
            <td>
                ${getStatusBadge(user.status)}
            </td>
            <td>${user.joinedAt}</td>
            <td>${user.lastLogin}</td>
            <td>
                <a href="/admin/user/${user.id}/view" class="btn btn-sm btn-success-soft me-1 mb-1 mb-md-0">View</a>
                <a href="/admin/user/${user.id}/edit" class="btn btn-sm btn-secondary-soft me-1 mb-1 mb-md-0">Edit</a>
                <button type="button" class="btn btn-sm btn-danger-soft mb-0" 
                        onclick="showDeleteConfirmation(${user.id}, '${escapeHtml(user.name)}', '${escapeHtml(user.email)}')" 
                        title="Delete User">
                    <i class="bi bi-trash"></i>
                </button>
            </td>
        </tr>
    `).join('');
    
    // Re-attach event listeners to new delete buttons
    attachDeleteButtonListeners();
}

function getRoleBadge(role) {
    const badges = {
        'Student': '<span class="badge bg-primary">Student</span>',
        'Instructor': '<span class="badge bg-success">Instructor</span>',
        'Admin': '<span class="badge bg-danger">Admin</span>'
    };
    return badges[role] || '<span class="badge bg-secondary">' + escapeHtml(role) + '</span>';
}

function getStatusBadge(status) {
    const badges = {
        'active': '<span class="badge bg-success bg-opacity-10 text-success">Active</span>',
        'inactive': '<span class="badge bg-warning bg-opacity-15 text-warning">Inactive</span>',
        'suspended': '<span class="badge bg-danger bg-opacity-10 text-danger">Suspended</span>'
    };
    return badges[status] || '<span class="badge bg-secondary bg-opacity-10 text-secondary">' + escapeHtml(status) + '</span>';
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

function updateResultsCount(count) {
    const resultsBadge = document.querySelector('.badge.bg-primary');
    if (resultsBadge) {
        resultsBadge.textContent = count + ' results';
    }
}

function updateURLParams(params) {
    const url = new URL(window.location);
    url.search = params.toString();
    window.history.pushState({}, '', url);
}

function showLoading() {
    const tableBody = document.querySelector('tbody');
    tableBody.style.opacity = '0.5';
    
    // Add loading spinner
    const existingLoader = document.querySelector('.search-loader');
    if (!existingLoader) {
        const loader = document.createElement('div');
        loader.className = 'search-loader text-center py-4';
        loader.innerHTML = '<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>';
        tableBody.parentNode.insertBefore(loader, tableBody);
    }
}

function hideLoading() {
    const tableBody = document.querySelector('tbody');
    tableBody.style.opacity = '1';
    
    const loader = document.querySelector('.search-loader');
    if (loader) {
        loader.remove();
    }
}

function showError(message) {
    const alert = document.createElement('div');
    alert.className = 'alert alert-warning alert-dismissible fade show';
    alert.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    
    const card = document.querySelector('.card');
    card.insertBefore(alert, card.firstChild);
    
    // Auto-remove after 5 seconds
    setTimeout(() => {
        alert.remove();
    }, 5000);
}

function highlightSearchTerms() {
    const searchParam = new URLSearchParams(window.location.search).get('search');
    if (!searchParam) return;
    
    const searchTerms = searchParam.split(' ').filter(term => term.length > 2);
    if (searchTerms.length === 0) return;
    
    const tableCells = document.querySelectorAll('td:nth-child(1), td:nth-child(2)');
    
    tableCells.forEach(cell => {
        let content = cell.innerHTML;
        searchTerms.forEach(term => {
            const regex = new RegExp(`(${escapeRegExp(term)})`, 'gi');
            content = content.replace(regex, '<mark>$1</mark>');
        });
        cell.innerHTML = content;
    });
}

function escapeRegExp(string) {
    return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
}

function getCsrfToken(tokenName) {
