{% extends 'front_base.html.twig' %}

{% block title %}Sign In - Unilearn{% endblock %}

{% block content %}

<!-- **************** MAIN CONTENT START **************** -->
<main>
	<section class="p-0 d-flex align-items-center position-relative overflow-hidden">
	
		<div class="container-fluid">
			<div class="row">
				<!-- left -->
				<div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100">
					<div class="p-3 p-lg-5">
						<!-- Title -->
						<div class="text-center">
							<h2 class="fw-bold">Welcome back!</h2>
							<p class="mb-0 h6 fw-light">Nice to see you again, please login to your account.</p>
						</div>
						<!-- SVG Image -->
						<img src="{{ asset('assets/images/element/03.svg') }}" class="mt-5" alt="">
						<!-- Info -->
						<div class="d-sm-flex mt-5 align-items-center justify-content-center">
							<!-- Avatar group -->
							<ul class="avatar-group mb-2 mb-sm-0">
								<li class="avatar avatar-sm">
									<img class="avatar-img rounded-circle" src="{{ asset('assets/images/avatar/01.jpg') }}" alt="avatar">
								</li>
								<li class="avatar avatar-sm">
									<img class="avatar-img rounded-circle" src="{{ asset('assets/images/avatar/02.jpg') }}" alt="avatar">
								</li>
								<li class="avatar avatar-sm">
									<img class="avatar-img rounded-circle" src="{{ asset('assets/images/avatar/03.jpg') }}" alt="avatar">
								</li>
								<li class="avatar avatar-sm">
									<img class="avatar-img rounded-circle" src="{{ asset('assets/images/avatar/04.jpg') }}" alt="avatar">
								</li>
							</ul>
							<!-- Content -->
							<p class="mb-0 h6 fw-light ms-0 ms-sm-3">4k+ Students joined us, now it's your turn.</p>
						</div>
					</div>
				</div>

				<!-- Right -->
				<div class="col-12 col-lg-6 m-auto">
					<div class="row my-5">
						<div class="col-sm-10 col-xl-8 m-auto">
							<!-- Title -->
							<span class="mb-0 fs-1">ðŸ‘‹</span>
							<h1 class="fs-2">Sign In into Unilearn!</h1>
							<p class="lead mb-4">Nice to see you again! Please login to your account.</p>
							
							<!-- Alert -->
							{% if error %}
								<div class="alert alert-danger">
									{{ error.messageKey|trans(error.messageData, 'Security') }}
								</div>
							{% endif %}

							<!-- Flash messages -->
							{% for type, messages in app.session.flashbag.all() %}
								{% for message in messages %}
									<div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
										{{ message|raw }}
										<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
									</div>
								{% endfor %}
							{% endfor %}

							<!-- Form START -->
							{% if loginForm is defined %}
								{{ form_start(loginForm, {'method': 'POST', 'action': path('app_login'), 'attr': {'novalidate': 'novalidate'}}) }}
									{{ form_errors(loginForm) }}
									<!-- Email -->
									<div class="mb-4">
										<label for="{{ loginForm.email.vars.id }}" class="form-label">Email address *</label>
										<div class="input-group input-group-lg">
											<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-envelope-fill"></i></span>
											{{ form_widget(loginForm.email, {'attr': {'class': 'form-control border-0 bg-light rounded-end ps-1', 'placeholder': 'Enter your email', 'value': last_username, 'novalidate': 'novalidate'}}) }}
										</div>
										{{ form_errors(loginForm.email) }}
									</div>
									<!-- Password -->
									<div class="mb-4">
										<label for="{{ loginForm.password.vars.id }}" class="form-label">Password *</label>
										<div class="input-group input-group-lg">
											<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
											{{ form_widget(loginForm.password, {'attr': {'class': 'form-control border-0 bg-light rounded-end ps-1', 'placeholder': 'Enter your password', 'novalidate': 'novalidate'}}) }}
										</div>
										{{ form_errors(loginForm.password) }}
									</div>
									<!-- Remember me -->
									<div class="mb-4">
										<div class="form-check">
											<input type="checkbox" class="form-check-input" id="rememberme" name="_remember_me">
											<label class="form-check-label" for="rememberme">Remember me</label>
										</div>
									</div>
									<!-- Button -->
									<div class="align-items-center mt-0">
										<div class="d-grid">
											<button type="submit" class="btn btn-primary mb-0">Sign In</button>
										</div>
									</div>
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								{{ form_end(loginForm) }}
							{% else %}
								<form method="post" action="{{ path('app_login') }}" novalidate>
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<!-- Email -->
									<div class="mb-4">
										<label for="inputEmail" class="form-label">Email address *</label>
										<div class="input-group input-group-lg">
											<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-envelope-fill"></i></span>
											<input type="email" class="form-control border-0 bg-light rounded-end ps-1" name="email" id="inputEmail" placeholder="Enter your email" value="{{ last_username is defined ? last_username : '' }}">
										</div>
									</div>
									<!-- Password -->
									<div class="mb-4">
										<label for="inputPassword" class="form-label">Password *</label>
										<div class="input-group input-group-lg">
											<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
											<input type="password" class="form-control border-0 bg-light rounded-end ps-1" name="password" id="inputPassword" placeholder="Enter your password">
										</div>
									</div>
									<!-- Remember me -->
									<div class="mb-4">
										<div class="form-check">
											<input type="checkbox" class="form-check-input" id="rememberme" name="_remember_me">
											<label class="form-check-label" for="rememberme">Remember me</label>
										</div>
									</div>
									<!-- Button -->
									<div class="align-items-center mt-0">
										<div class="d-grid">
											<button type="submit" class="btn btn-primary mb-0">Sign In</button>
										</div>
									</div>
								</form>
							{% endif %}
							<!-- Form END -->

							<!-- Social buttons and divider -->
							<div class="row">
								<!-- Divider with text -->
								<div class="position-relative my-4">
									<hr>
									<p class="small position-absolute top-50 start-50 translate-middle bg-body px-5">Or</p>
								</div>

								<!-- Social btn -->
								<div class="col-xxl-6 d-grid">
									<a href="#" class="btn bg-google mb-2 mb-xxl-0"><i class="fab fa-fw fa-google text-white me-2"></i>Login with Google</a>
								</div>
								<!-- Social btn -->
								<div class="col-xxl-6 d-grid">
									<a href="#" class="btn bg-facebook mb-0"><i class="fab fa-fw fa-facebook-f me-2"></i>Login with Facebook</a>
								</div>
							</div>

							<!-- Sign up link -->
							<div class="mt-4 text-center">
								<span>Don't have an account? <a href="{{ path('app_sign_up') }}">Signup here</a></span>
							</div>
						</div>
					</div> <!-- Row END -->
				</div>
			</div> <!-- Row END -->
		</div>
	</section>
</main>
<!-- **************** MAIN CONTENT END **************** -->

{% endblock %}
