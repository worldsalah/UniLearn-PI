    {% endblock %}

    {% block javascripts %}{% endblock %}

    <!-- Global Notification JavaScript -->
    <script>
    // Global Notification System
    function showGlobalNotification(title, message, type = 'success', icon = 'fas fa-check-circle', autoHide = true) {
        const container = document.getElementById('globalNotificationContainer');
        if (!container) return;

        const notificationId = 'notification-' + Date.now();
        
        const notificationHTML = `
            <div id="${notificationId}" class="global-notification ${type}">
                <div class="notification-content">
                    <div class="notification-icon">
                        <i class="${icon}"></i>
                    </div>
                    <div class="notification-text">
                        <h6 class="notification-title">${title}</h6>
                        <p class="notification-message">${message}</p>
                    </div>
                    <button class="notification-close" onclick="closeGlobalNotification('${notificationId}')">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="notification-progress"></div>
            </div>
        `;

        container.insertAdjacentHTML('beforeend', notificationHTML);

        if (autoHide) {
            setTimeout(() => {
                closeGlobalNotification(notificationId);
            }, 5000);
        }
    }

    function closeGlobalNotification(notificationId) {
        const notification = document.getElementById(notificationId);
        if (notification) {
            notification.classList.add('hiding');
            setTimeout(() => {
                notification.remove();
            }, 300);
        }
    }

    // Auto-show flash messages as global notifications
    document.addEventListener('DOMContentLoaded', function() {
        // Check for flash messages in the page
        const flashMessages = {
            'course_deleted': {
                selector: '[data-flash-type="course_deleted"]',
                type: 'success',
                icon: 'fas fa-check-circle'
            },
            'course_updated': {
                selector: '[data-flash-type="course_updated"]',
                type: 'success',
                icon: 'fas fa-edit'
            },
            'success': {
                selector: '[data-flash-type="success"]',
                type: 'success', 
                icon: 'fas fa-check-circle'
            },
            'error': {
                selector: '[data-flash-type="error"]',
                type: 'error',
                icon: 'fas fa-exclamation-circle'
            },
            'warning': {
                selector: '[data-flash-type="warning"]',
                type: 'warning',
                icon: 'fas fa-exclamation-triangle'
            },
            'info': {
                selector: '[data-flash-type="info"]',
                type: 'info',
                icon: 'fas fa-info-circle'
            }
        };

        // Convert flash messages to global notifications
        Object.keys(flashMessages).forEach(flashType => {
            const config = flashMessages[flashType];
            const elements = document.querySelectorAll(config.selector);
            
            elements.forEach(element => {
                const title = element.getAttribute('data-flash-title') || 'Notification';
                const message = element.getAttribute('data-flash-message') || element.textContent;
                
                showGlobalNotification(title, message, config.type, config.icon);
                element.style.display = 'none'; // Hide original flash message
            });
        });
    });

    // Make the function globally available
    window.showGlobalNotification = showGlobalNotification;
    window.closeGlobalNotification = closeGlobalNotification;
    </script>
</body>
</html>
