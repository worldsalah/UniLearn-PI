{% extends 'front_base.html.twig' %}

{% block title %}{{ category.name }} Courses - Unilearn{% endblock %}

{% block stylesheets %}
<style>
/* Category Detail Styles */
.category-header {
    background: linear-gradient(135deg, {{ category.color|default('#007bff') }} 0%, {{ category.color|default('#007bff')|slice(0, 7) }}dd 100%);
    color: white;
    padding: 4rem 0;
    margin-bottom: 3rem;
    position: relative;
    overflow: hidden;
}

.category-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><circle cx="1" cy="1" r="0.5" fill="%23ffffff20" opacity="0.3"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.1;
}

.category-icon-large {
    width: 120px;
    height: 120px;
    border-radius: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    margin-bottom: 2rem;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
}

.category-icon-large:hover {
    transform: scale(1.05);
    background: rgba(255, 255, 255, 0.3);
}

.category-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    position: relative;
    z-index: 2;
}

.category-description {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    position: relative;
    z-index: 2;
}

.category-stats {
    display: flex;
    gap: 2rem;
    position: relative;
    z-index: 2;
}

.stat-large {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(255, 255, 255, 0.1);
    padding: 1rem 2rem;
    border-radius: 12px;
    backdrop-filter: blur(10px);
}

.stat-large .number {
    font-size: 2rem;
    font-weight: 700;
}

.stat-large .label {
    font-size: 0.9rem;
    opacity: 0.8;
}

.course-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}

.course-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 2px solid transparent;
}

.course-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    border-color: {{ category.color|default('#007bff') }};
}

.course-thumbnail {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.course-content {
    padding: 1.5rem;
}

.course-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: #2c3e50;
    text-decoration: none;
    display: block;
}

.course-title:hover {
    color: {{ category.color|default('#007bff') }};
}

.course-description {
    color: #6c757d;
    margin-bottom: 1rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.course-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.course-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: {{ category.color|default('#007bff') }};
}

.course-level {
    background: {{ category.color|default('#007bff') }}20;
    color: {{ category.color|default('#007bff') }};
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
}

.course-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid #e9ecef;
}

.instructor-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #6c757d;
}

.course-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: {{ category.color|default('#007bff') }};
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.course-link:hover {
    transform: translateX(5px);
    color: white;
}

.no-courses {
    text-align: center;
    padding: 4rem 2rem;
    background: #f8f9fa;
    border-radius: 16px;
}

.no-courses i {
    font-size: 4rem;
    color: #6c757d;
    margin-bottom: 1rem;
}

@media (max-width: 768px) {
    .category-header {
        padding: 3rem 0;
    }
    
    .category-title {
        font-size: 2rem;
    }
    
    .category-stats {
        flex-direction: column;
        gap: 1rem;
    }
    
    .course-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
}
</style>
{% endblock %}

{% block content %}
<!-- Category Header -->
<section class="category-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                {% set icon_mapping = {
                    'code': 'bi-code',
                    'palette': 'bi-palette',
                    'megaphone': 'bi-megaphone',
                    'pen': 'bi-pen',
                    'briefcase': 'bi-briefcase',
                    'data-science': 'bi-bar-chart-line',
                    'online': 'bi-globe',
                    'engineering': 'bi-tools',
                    'coding': 'bi-code-square',
                    'profit': 'bi-cash',
                    'medical': 'bi-first-aid',
                    'home': 'bi-house',
                    'artist': 'bi-palette',
                    'account': 'bi-person'
                } %}
                
                <div class="category-icon-large">
                        {% if category.icon %}
                            {% if category.icon starts with 'http' %}
                                <img src="{{ category.icon }}" alt="{{ category.name }}" style="width: 80px; height: 80px; object-fit: contain;">
                            {% elseif category.icon starts with 'bi-' %}
                                <i class="{{ category.icon }}"></i>
                            {% elseif icon_mapping[category.icon] is defined %}
                                <i class="{{ icon_mapping[category.icon] }}"></i>
                            {% else %}
                                <i class="bi bi-palette"></i>
                            {% endif %}
                        {% else %}
                            <i class="bi bi-tag"></i>
                        {% endif %}
                    </div>
                
                <h1 class="category-title">{{ category.name }}</h1>
                
                {% if category.description %}
                    <p class="category-description">{{ category.description }}</p>
                {% endif %}
                
                <div class="category-stats">
                    <div class="stat-large">
                        <div class="number">{{ courses|length }}</div>
                        <div class="label">Courses</div>
                    </div>
                    <div class="stat-large">
                        <div class="number">
                            {% set totalLessons = 0 %}
                            {% for course in courses %}
                                {% if course.chapters is defined and course.chapters %}
                                    {% for chapter in course.chapters %}
                                        {% if chapter.lessons is defined and chapter.lessons %}
                                            {% set totalLessons = totalLessons + chapter.lessons|length %}
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}
                            {{ totalLessons }}
                        </div>
                        <div class="label">Lessons</div>
                    </div>
                    <div class="stat-large">
                        <div class="number">
                            {% set totalDuration = 0 %}
                            {% for course in courses %}
                                {% if course.duration is defined and course.duration %}
                                    {% set totalDuration = totalDuration + course.duration %}
                                {% endif %}
                            {% endfor %}
                            {{ totalDuration }}
                        </div>
                        <div class="label">Hours</div>
                    </div>
                </div>
                
                <!-- Debug info -->
                <div class="mt-3 p-2 bg-light rounded">
                    <small class="text-muted">
                        Debug: Found {{ courses|length }} courses in category "{{ category.name }}"
                        {% if courses|length > 0 %}
                            - First course: {{ courses[0].title ?? 'N/A' }}
                            <br>
                            - Course statuses: 
                            {% for course in courses %}
                                {{ course.status ?? 'unknown' }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        {% else %}
                            <br>
                            - No courses found. Check if courses have correct category assignment.
                        {% endif %}
                    </small>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Courses Section -->
<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3">Available Courses</h2>
            <div>
                <a href="{{ path('app_categories') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>All Categories
                </a>
            </div>
        </div>
        
        {% if courses|length > 0 %}
            <div class="course-grid">
                {% for course in courses %}
                    <div class="course-card">
                        {% if course.thumbnailUrl %}
                            <img src="{{ asset(course.thumbnailUrl) }}" alt="{{ course.title }}" class="course-thumbnail">
                        {% else %}
                            <div class="course-thumbnail d-flex align-items-center justify-content-center">
                                <i class="bi bi-book fa-3x text-muted"></i>
                            </div>
                        {% endif %}
                        
                        <div class="course-content">
                            <a href="{{ path('app_course_show', {'id': course.id}) }}" class="course-title">
                                {{ course.title }}
                            </a>
                            
                            <p class="course-description">{{ course.shortDescription }}</p>
                            
                            <div class="course-meta">
                                <div class="course-price">${{ course.price|number_format(2, '.', ',') }}</div>
                                <div class="course-level">{{ course.level|default('All Levels') }}</div>
                            </div>
                            
                            <div class="course-footer">
                                <div class="instructor-info">
                                    <i class="bi bi-person"></i>
                                    <span>{{ course.user ? course.user.fullName : 'Instructor' }}</span>
                                </div>
                                
                                <a href="{{ path('app_course_show', {'id': course.id}) }}" class="course-link">
                                    View Course
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-courses">
                <i class="bi bi-book"></i>
                <h3 class="text-muted">No Courses Available</h3>
                <p class="text-muted">There are currently no courses in this category. Check back soon!</p>
                <a href="{{ path('app_categories') }}" class="btn btn-primary mt-3">
                    Browse Other Categories
                </a>
            </div>
        {% endif %}
    </div>
</section>

<!-- Footer -->
{% include 'components/footer.html.twig' %}
{% endblock %}
