{% extends 'front_base.html.twig' %}

{% block title %}My Certificates{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-certificate me-2"></i>
                        My Certificates
                    </h3>
                </div>
                <div class="card-body">
                    {% if certificates is defined and certificates|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Course</th>
                                        <th>Completion Date</th>
                                        <th>Score</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for certificate in certificates %}
                                        <tr>
                                            <td>
                                                <strong>{{ certificate.course.title }}</strong>
                                                <br>
                                                <small class="text-muted">ID: #{{ certificate.course.id }}</small>
                                            </td>
                                            <td>{{ certificate.completionDate|date('F j, Y') }}</td>
                                            <td>
                                                <span class="badge bg-success">{{ certificate.score }}%</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_certificate_preview', {'courseId': certificate.course.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       title="View certificate">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_certificate_generate_for_user', {'courseId': certificate.course.id}) }}" 
                                                       class="btn btn-sm btn-success" 
                                                       title="Download certificate">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-certificate fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Certificates Earned Yet</h4>
                            <p class="text-muted">
                                You haven't completed any courses yet. Start learning to earn your first certificate!
                            </p>
                            <a href="{{ path('app_courses') }}" class="btn btn-primary">
                                <i class="fas fa-graduation-cap me-2"></i>
                                Browse Courses
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .certificate-badge {
        font-size: 0.8em;
        padding: 4px 8px;
    }
    
    .btn-group .btn {
        margin-right: 5px;
    }
    
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }
    
    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3) !important;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
    }
    
    .fa-3x {
        font-size: 3em;
    }
</style>
{% endblock %}
