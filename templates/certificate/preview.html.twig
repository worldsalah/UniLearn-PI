{% extends 'base.html.twig' %}

{% block title %}Certificate Preview - {{ course.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .certificate-preview {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 40px 20px;
        }
        
        .download-section {
            text-align: center;
            margin-top: 40px;
            padding: 30px;
            background: rgba(46, 204, 113, 0.05);
            border-radius: 15px;
            border: 1px solid rgba(46, 204, 113, 0.1);
        }
        
        .certificates-section {
            text-align: center;
            margin-top: 30px;
            padding: 25px;
            background: rgba(23, 162, 184, 0.05);
            border-radius: 15px;
            border: 1px solid rgba(23, 162, 184, 0.1);
        }
        
        .btn-certificates {
            background: linear-gradient(135deg, #17a2b8, #138496);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 4px 15px rgba(23, 162, 184, 0.3);
        }
        
        .btn-certificates:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(23, 162, 184, 0.4);
            color: white;
        }
        
        .preview-header {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            color: white;
            padding: 30px;
            text-align: center;
        }
        
        .preview-header h1 {
            margin: 0;
            font-size: 2.5rem;
            font-weight: bold;
        }
        
        .preview-header p {
            margin: 10px 0 0 0;
            font-size: 1.2rem;
            opacity: 0.9;
        }
        
        .certificate-frame {
            padding: 40px;
            background: white;
            transform: scale(0.8);
            transform-origin: top center;
            margin-bottom: -20%;
        }
        
        .action-buttons {
            background: #f8f9fa;
            padding: 30px;
            text-align: center;
            border-top: 1px solid #e9ecef;
        }
        
        .btn-download {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            color: white;
            border: none;
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 50px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(46, 204, 113, 0.3);
        }
        
        .btn-download:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(46, 204, 113, 0.4);
            color: white;
        }
        
        .btn-back {
            background: #6c757d;
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1rem;
            border-radius: 50px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            margin-right: 15px;
        }
        
        .btn-back:hover {
            background: #5a6268;
            color: white;
        }
        
        .success-message {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            text-align: center;
            border: 1px solid #c3e6cb;
        }
        
        .success-message h3 {
            margin: 0 0 10px 0;
            font-size: 1.5rem;
        }
        
        .success-message p {
            margin: 0;
            font-size: 1.1rem;
        }
        
        @media (max-width: 768px) {
            .certificate-frame {
                transform: scale(0.6);
                margin-bottom: -40%;
            }
            
            .preview-header h1 {
                font-size: 2rem;
            }
            
            .action-buttons {
                padding: 20px;
            }
            
            .btn-download {
                padding: 12px 30px;
                font-size: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="certificate-preview">
    <div class="preview-container">
        <!-- Header -->
        <div class="preview-header">
            <h1>ðŸŽ‰ Congratulations!</h1>
            <p>You have successfully completed the course</p>
        </div>
        
        <!-- Success Message -->
        <div class="success-message">
            <h3>Certificate of Completion Earned!</h3>
            <p>Your dedication and hard work have paid off. You've successfully completed <strong>{{ course.title }}</strong></p>
        </div>
        
        <!-- Certificate Preview -->
        <div class="certificate-frame">
            {{ include('certificate/certificate.html.twig') }}
        </div>
        
        <!-- All Certificates Button -->
        <div class="certificates-section">
            <a href="{{ path('app_certificates') }}" class="btn-certificates">
                <i class="fas fa-list"></i>
                View All My Certificates
            </a>
        </div>
        
        <!-- Auto Download Script -->
        <script>
            // Auto-download certificate when page loads
            document.addEventListener('DOMContentLoaded', function() {
                // Small delay to ensure page is fully loaded
                setTimeout(function() {
                    const downloadLink = document.createElement('a');
                    downloadLink.href = '/certificate/generate/{{ course.id }}';
                    downloadLink.style.display = 'none';
                    document.body.appendChild(downloadLink);
                    downloadLink.click();
                    document.body.removeChild(downloadLink);
                }, 1000); // 1 second delay
            });
        </script>
    </div>
</div>
{% endblock %}
