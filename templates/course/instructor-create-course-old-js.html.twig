<!-- Init scripts for course creation page -->
<script>
document.addEventListener("DOMContentLoaded", function() {
    // Initialize Choices.js with custom configuration (only on this page)
    const elements = document.querySelectorAll('.js-choice');
    
    elements.forEach(function(element) {
        // Only initialize if not already initialized by Choices
        if (!element.classList.contains('choices__input')) {
            new Choices(element, {
                searchEnabled: element.dataset.searchEnabled === 'true',
                searchPlaceholderValue: 'Search...',
                itemSelectText: 'Press to select',
                allowHTML: false,
                removeItemButton: element.dataset.removeItemButton === 'true'
            });
        }
    });

    // Initialize Stepper immediately and ensure first step is visible
    const stepperElement = document.querySelector('#stepper');
    console.log('Stepper element found:', !!stepperElement);
    console.log('Stepper library available:', typeof Stepper !== 'undefined');
    
    // Create custom stepper object
    window.stepper = {
        currentIndex: 0,
        totalSteps: 4,
        
        next: function() {
            console.log('Current index before move:', this.currentIndex);
            console.log('Total steps:', this.totalSteps);
            
            if (this.currentIndex < this.totalSteps - 1) {
                console.log('Moving from step', this.currentIndex + 1, 'to step', this.currentIndex + 2);
                
                // Hide current step
                const currentStep = document.querySelector(`#step-${this.currentIndex + 1}`);
                console.log('Current step element found:', !!currentStep, 'ID:', `#step-${this.currentIndex + 1}`);
                if (currentStep) {
                    console.log('Hiding step:', currentStep.id);
                    currentStep.style.display = 'none';
                    currentStep.style.opacity = '0';
                    currentStep.style.visibility = 'hidden';
                    currentStep.classList.remove('active');
                }
                
                // Increment index
                this.currentIndex++;
                console.log('Index after increment:', this.currentIndex);
                
                // Show next step
                const nextStepId = `#step-${this.currentIndex + 1}`;
                const nextStep = document.querySelector(nextStepId);
                console.log('Next step element found:', !!nextStep, 'ID:', nextStepId);
                if (nextStep) {
                    console.log('Showing step:', nextStep.id);
                    nextStep.style.display = 'block';
                    nextStep.style.opacity = '1';
                    nextStep.style.visibility = 'visible';
                    nextStep.classList.add('active');
                } else {
                    console.log('Next step not found! Available steps:');
                    for (let i = 1; i <= 4; i++) {
                        const step = document.querySelector(`#step-${i}`);
                        console.log(`Step ${i}:`, !!step, step ? step.id : 'null');
                    }
                }
                
                // Update step indicators
                this.updateStepIndicators();
                
                console.log('Successfully moved to step:', this.currentIndex + 1);
            } else {
                console.log('Already at last step');
            }
        },
        
        previous: function() {
            if (this.currentIndex > 0) {
                console.log('Moving from step', this.currentIndex + 1, 'to step', this.currentIndex);
                
                // Hide current step
                const currentStep = document.querySelector(`#step-${this.currentIndex + 1}`);
                if (currentStep) {
                    console.log('Hiding step:', currentStep.id);
                    currentStep.style.display = 'none';
                    currentStep.style.opacity = '0';
                    currentStep.style.visibility = 'hidden';
                    currentStep.classList.remove('active');
                }
                
                // Decrement index
                this.currentIndex--;
                
                // Show previous step
                const prevStep = document.querySelector(`#step-${this.currentIndex + 1}`);
                if (prevStep) {
                    console.log('Showing step:', prevStep.id);
                    prevStep.style.display = 'block';
                    prevStep.style.opacity = '1';
                    prevStep.style.visibility = 'visible';
                    prevStep.classList.add('active');
                }
                
                // Update step indicators
                this.updateStepIndicators();
                
                console.log('Successfully moved to step:', this.currentIndex + 1);
            } else {
                console.log('Already at first step');
            }
        },
        
        updateStepIndicators: function() {
            // Update step indicator classes
            document.querySelectorAll('.step').forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index < this.currentIndex) {
                    step.classList.add('completed');
                } else if (index === this.currentIndex) {
                    step.classList.add('active');
                }
            });
        }
    };
    
    // Force first step to be visible
    const firstStep = document.querySelector('#step-1');
    console.log('First step found:', !!firstStep);
    if (firstStep) {
        firstStep.style.display = 'block';
        firstStep.classList.add('active');
        console.log('First step made visible');
    }
    
    // Check all steps exist
    for (let i = 1; i <= 4; i++) {
        const step = document.querySelector(`#step-${i}`);
        console.log(`Step ${i} found:`, !!step, 'ID:', `#step-${i}`);
    }
    
    // Hide other steps initially
    document.querySelector('#step-2').style.display = 'none';
    document.querySelector('#step-3').style.display = 'none';
    document.querySelector('#step-4').style.display = 'none';
    
    // Manual button handlers
    document.querySelectorAll('.next-btn').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            console.log('Next button clicked');
            window.stepper.next();
        });
    });
    
    document.querySelectorAll('.previous-btn').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            console.log('Previous button clicked');
            window.stepper.previous();
        });
    });
    
    console.log('Custom stepper initialized');

    // Initialize AOS
    if (typeof AOS !== 'undefined') {
        AOS.init({
            duration: 800,
            once: true
        });
    }

    // Initialize Glightbox
    if (typeof GLightbox !== 'undefined') {
        const lightbox = GLightbox({
            selector: '.glightbox'
        });
    }

    // File upload preview
    const courseImageInput = document.getElementById('courseImage');
    if (courseImageInput) {
        courseImageInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.querySelector('#thumb-container img');
                    if (img) {
                        img.src = e.target.result;
                    }
                };
                reader.readAsDataURL(file);
            }
        });
    }

    // Video upload preview
    const courseVideoInput = document.getElementById('courseVideo');
    const videoPreview = document.getElementById('video-preview');
    const videoPlaceholder = document.getElementById('video-placeholder');
    
    if (courseVideoInput && videoPreview && videoPlaceholder) {
        courseVideoInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const videoURL = URL.createObjectURL(file);
                videoPreview.src = videoURL;
                videoPreview.classList.remove('d-none');
                videoPlaceholder.classList.add('d-none');
            } else {
                videoPreview.src = '';
                videoPreview.classList.add('d-none');
                videoPlaceholder.classList.remove('d-none');
            }
        });
    }

    // Helper to update field UI
    const updateFieldUI = (fieldId, isValid, message) => {
        const el = document.getElementById(fieldId);
        const errorMapping = {
            'course_title': 'title',
            'short_description': 'shortDescription',
            'course_category': 'category',
            'course_level': 'level',
            'course_price': 'price',
            'courseImage': 'thumbnailUrl',
            'courseVideo': 'videoUrl',
            'requirements': 'requirements',
            'learning_outcomes': 'learningOutcomes',
            'target_audience': 'targetAudience',
            'language': 'language',
            'duration': 'duration'
        };
        
        const errorSuffix = errorMapping[fieldId] || fieldId;
        const errorEl = document.getElementById('error-' + errorSuffix);
        
        if (el) {
            const container = (fieldId === 'courseImage' || fieldId === 'thumbnailUrl') ? document.getElementById('thumb-container') : 
                              (fieldId === 'courseVideo' || fieldId === 'videoUrl') ? document.getElementById('video-container') : null;
            
            if (isValid) {
                el.classList.remove('is-invalid');
                if (container) {
                    container.style.borderColor = '#198754'; // Success green
                    container.classList.remove('is-invalid');
                }
                if (errorEl) errorEl.textContent = '';
            } else {
                // Show error if field was touched or is inherently required
                el.classList.add('is-invalid');
                if (container) {
                    container.style.borderColor = '#dc3545'; // Danger red
                    container.classList.add('is-invalid');
                }
                if (errorEl) errorEl.textContent = message || 'This field is required.';
            }
        }
    };

    // Validation Logic for Step 1
    const validateStep1 = () => {
        const titleEl = document.getElementById('course_title');
        const descEl = document.getElementById('short_description');
        const catEl = document.getElementById('course_category');
        const levelEl = document.getElementById('course_level');
        const priceEl = document.getElementById('course_price');
        
        const nextBtn = document.getElementById('next-btn-1');
        if (!nextBtn) return;

        const title = titleEl ? titleEl.value.trim() : "";
        const description = descEl ? descEl.value.trim() : "";
        const category = catEl ? catEl.value : "";
        const level = levelEl ? levelEl.value : "";
        const price = priceEl ? priceEl.value.trim() : "";
        
        const isTitleValid = title.length >= 5 && !/^\d+$/.test(title);
        const isDescValid = description.length >= 20;
        const isCatValid = !!category;
        const isLevelValid = !!level;
        const isPriceValid = !!price && !isNaN(price) && parseFloat(price) > 0;
        
        updateFieldUI('course_title', isTitleValid, title.length < 5 ? 'Le titre doit faire au moins 5 caractères.' : 'Le titre ne peut pas être composé uniquement de chiffres.');
        updateFieldUI('short_description', isDescValid, 'La description doit faire au moins 20 caractères.');
        updateFieldUI('course_category', isCatValid, 'Veuillez choisir une catégorie.');
        updateFieldUI('course_level', isLevelValid, 'Veuillez choisir un niveau.');
        updateFieldUI('course_price', isPriceValid, 'Veuillez entrer un prix positif.');
        
        nextBtn.disabled = !(isTitleValid && isDescValid && isCatValid && isLevelValid && isPriceValid);
    };

    // State for media validation
    const mediaStatus = {
        image: false,
        video: false
    };

    // Validation Logic for Step 2
    const validateStep2 = () => {
        const thumbBtn = document.getElementById('courseImage');
        const videoBtn = document.getElementById('courseVideo');
        const nextBtn = document.getElementById('next-btn-2');
        if (!nextBtn) return;

        const thumbFile = thumbBtn && thumbBtn.files ? thumbBtn.files[0] : null;
        const videoFile = videoBtn && videoBtn.files ? videoBtn.files[0] : null;
        
        // Video Validation (Sync)
        const isVideoValid = !!videoFile && ['video/mp4', 'video/webm', 'video/ogg'].includes(videoFile.type) && videoFile.size <= 500 * 1024 * 1024;
        mediaStatus.video = isVideoValid;
        updateFieldUI('courseVideo', isVideoValid, !videoFile ? 'Veuillez sélectionner une vidéo d\'introduction.' : 
                     (videoFile.size > 500 * 1024 * 1024 ? 'La vidéo est trop lourde (Max 500Mo).' : 'Format vidéo invalide (MP4/WebM/OGG requis).'));

        // Image Validation (Async)
        if (!thumbFile) {
            mediaStatus.image = false;
            updateFieldUI('courseImage', false, 'Veuillez sélectionner une image de couverture.');
            nextBtn.disabled = true;
        } else if (!['image/jpeg', 'image/png'].includes(thumbFile.type)) {
            mediaStatus.image = false;
            updateFieldUI('courseImage', false, 'Format invalide (JPG/PNG requis).');
            nextBtn.disabled = true;
        } else {
            // Check dimensions
            const img = new Image();
            img.onload = function() {
                if (img.width > 800 || img.height > 200) {
                    mediaStatus.image = false;
                    updateFieldUI('courseImage', false, `La largeur de l'image ne doit pas dépasser 800px et la hauteur 200px (Actuel: ${img.width}x${img.height}px).`);
                } else {
                    mediaStatus.image = true;
                    updateFieldUI('courseImage', true);
                }
                nextBtn.disabled = !(mediaStatus.image && mediaStatus.video);
                // Revoke the object URL to free up memory
                URL.revokeObjectURL(img.src);
            };
            img.onerror = function() {
                mediaStatus.image = false;
                updateFieldUI('courseImage', false, 'Erreur lors du chargement de l\'image.');
                nextBtn.disabled = true;
            };
            img.src = URL.createObjectURL(thumbFile);
        }
        
        // Initial button check (video might be valid but image pending)
        nextBtn.disabled = !(mediaStatus.image && mediaStatus.video);
    };

    // Validation Logic for Step 3
    const validateStep3 = () => {
        const chapters = document.querySelectorAll('.chapter-item');
        const nextBtn = document.getElementById('next-btn-3');
        if (!nextBtn) return;

        let isValid = chapters.length > 0;
        
        chapters.forEach(chapter => {
            const titleInput = chapter.querySelector('input[type="text"]');
            if (!titleInput || titleInput.value.trim().length < 3) {
                isValid = false;
            }
            
            const lessons = chapter.querySelectorAll('.lesson-item');
            if (lessons.length === 0) {
                isValid = false;
            }
            
            lessons.forEach(lesson => {
                const titleInput = lesson.querySelector('.lesson-title');
                const durationInput = lesson.querySelector('.lesson-duration');
                const lessonTitle = titleInput ? titleInput.value.trim() : "";
                const lessonDuration = durationInput ? durationInput.value.trim() : "";
                const durationError = lesson.querySelector('.lesson-duration-error');
                
                const isLessonTitleValid = lessonTitle.length >= 3;
                const isLessonDurationValid = /^\d+:[0-5]\d$/.test(lessonDuration);

                // Show/hide lesson duration error message
                if (durationError) {
                    if (lessonDuration && !isLessonDurationValid) {
                        durationError.style.display = 'block';
                        if (durationInput) durationInput.classList.add('is-invalid');
                    } else {
                        durationError.style.display = 'none';
                        if (durationInput) durationInput.classList.remove('is-invalid');
                    }
                }
                
                if (!isLessonTitleValid || !isLessonDurationValid) {
                    isValid = false;
                }
            });
        });

        nextBtn.disabled = !isValid;
    };

    // Validation Logic for Step 4
    const validateStep4 = () => {
        const reqEl = document.getElementById('requirements');
        const learnEl = document.getElementById('learning_outcomes');
        const targetEl = document.getElementById('target_audience');
        const langEl = document.getElementById('language');
        const durEl = document.getElementById('duration');
        
        const req = reqEl ? reqEl.value.trim() : "";
        const learn = learnEl ? learnEl.value.trim() : "";
        const target = targetEl ? targetEl.value.trim() : "";
        const lang = langEl ? langEl.value : "";
        const dur = durEl ? durEl.value.trim() : "";
        
        const isReqValid = req.length >= 10;
        const isLearnValid = learn.length >= 10;
        const isTargetValid = target.length >= 10;
        const isLangValid = !!lang;
        const isDurValid = !!dur && !isNaN(dur) && parseFloat(dur) > 0;
        
        updateFieldUI('requirements', isReqValid, 'Veuillez entrer au moins 10 caractères.');
        updateFieldUI('learning_outcomes', isLearnValid, 'Veuillez entrer au moins 10 caractères.');
        updateFieldUI('target_audience', isTargetValid, 'Veuillez entrer au moins 10 caractères.');
        updateFieldUI('language', isLangValid, 'La langue est obligatoire.');
        updateFieldUI('duration', isDurValid, 'La durée doit être un nombre positif.');
        
        const submitBtn = document.querySelector('button[onclick="submitCourse()"]');
        if (submitBtn) {
            submitBtn.disabled = !(isReqValid && isLearnValid && isTargetValid && isLangValid && isDurValid);
        }
    };

    // Attach Listeners
    const attachAllListeners = () => {
        ['course_title', 'short_description', 'course_category', 'course_level', 'course_price'].forEach(id => {
            const el = document.getElementById(id);
            if (el) {
                el.addEventListener('input', validateStep1);
                el.addEventListener('change', validateStep1);
                el.addEventListener('addItem', validateStep1);
                el.addEventListener('removeItem', validateStep1);
            }
        });

        ['courseImage', 'courseVideo'].forEach(id => {
            const el = document.getElementById(id);
            if (el) el.addEventListener('change', validateStep2);
        });

        ['requirements', 'learning_outcomes', 'target_audience', 'language', 'duration'].forEach(id => {
            const el = document.getElementById(id);
            if (el) {
                el.addEventListener('input', validateStep4);
                el.addEventListener('change', validateStep4);
                el.addEventListener('addItem', validateStep4);
            }
        });

        // Add listeners for Curriculum (Step 3) changes
        const checkCurriculum = () => {
            validateStep3();
        };
        
        document.getElementById('chaptersContainer').addEventListener('input', checkCurriculum);
        document.getElementById('chaptersContainer').addEventListener('click', (e) => {
            if (e.target.closest('button')) {
                // Delay slightly to allow DOM changes (add/remove)
                setTimeout(validateStep3, 100);
            }
        });
    };

    attachAllListeners();
    validateStep1();
    validateStep2();
    validateStep3();
    validateStep4();
    
    // Initial check loop to handle Choices.js delays
    let checks = 0;
    const interval = setInterval(() => {
        validateStep1();
        validateStep2();
        validateStep3();
        validateStep4();
        if (++checks >= 5) clearInterval(interval);
    }, 1000);
});

