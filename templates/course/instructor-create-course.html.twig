<!-- Init scripts for course creation page -->
<script>
document.addEventListener("DOMContentLoaded", function() {
    // Initialize Choices.js with custom configuration (only on this page)
    const elements = document.querySelectorAll('.js-choice');
    
    elements.forEach(function(element) {
        // Only initialize if not already initialized by Choices
        if (!element.classList.contains('choices__input')) {
            new Choices(element, {
                searchEnabled: element.dataset.searchEnabled === 'true',
                searchPlaceholderValue: 'Search...',
                itemSelectText: 'Press to select',
                allowHTML: false,
                removeItemButton: element.dataset.removeItemButton === 'true'
            });
        }
    });

    // Simple stepper functionality without validation
    const stepper = {
        currentIndex: 0,
        steps: document.querySelectorAll('.bs-stepper-pane'),
        
        next: function() {
            if (this.currentIndex < this.steps.length - 1) {
                this.steps[this.currentIndex].classList.remove('active');
                this.currentIndex++;
                this.steps[this.currentIndex].classList.add('active');
                this.updateStepIndicators();
            }
        },
        
        previous: function() {
            if (this.currentIndex > 0) {
                this.steps[this.currentIndex].classList.remove('active');
                this.currentIndex--;
                this.steps[this.currentIndex].classList.add('active');
                this.updateStepIndicators();
            }
        },
        
        updateStepIndicators: function() {
            document.querySelectorAll('.step').forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index < this.currentIndex) {
                    step.classList.add('completed');
                } else if (index === this.currentIndex) {
                    step.classList.add('active');
                }
            });
        }
    };

    // Add event listeners for navigation buttons
    document.querySelectorAll('.next-btn').forEach(btn => {
        btn.addEventListener('click', () => stepper.next());
    });
    
    document.querySelectorAll('.previous-btn').forEach(btn => {
        btn.addEventListener('click', () => stepper.previous());
    });

    // Add form submission handler for all submit buttons
    document.querySelectorAll('button[type="submit"]').forEach(btn => {
        btn.addEventListener('click', function(e) {
            // Prevent default stepper navigation
            e.preventDefault();
            
            // Validate all steps before submission
            let isValid = true;
            let firstInvalidField = null;
            
            // Check all form fields
            const form = document.getElementById('courseForm');
            const inputs = form.querySelectorAll('input, select, textarea');
            
            inputs.forEach(input => {
                // Remove any existing validation styling
                input.classList.remove('is-invalid');
                
                // Basic validation
                if (input.hasAttribute('required') && !input.value.trim()) {
                    isValid = false;
                    input.classList.add('is-invalid');
                    if (!firstInvalidField) {
                        firstInvalidField = input;
                    }
                }
                
                // Email validation
                if (input.type === 'email' && input.value && !validateEmail(input.value)) {
                    isValid = false;
                    input.classList.add('is-invalid');
                    if (!firstInvalidField) {
                        firstInvalidField = input;
                    }
                }
            });
            
            if (!isValid) {
                // Show error message
                const errorDiv = document.createElement('div');
                errorDiv.className = 'alert alert-danger alert-dismissible fade show d-flex align-items-center';
                errorDiv.innerHTML = `
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-2">
                            <i class="fas fa-times-circle me-1"></i>
                            Please correct the following errors before submitting:
                        </h6>
                        <ul class="mb-0">
                            <li>Fill in all required fields marked with *</li>
                            <li>Ensure email addresses are valid</li>
                            <li>Complete all steps of the course creation form</li>
                        </ul>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                
                // Insert error message at the top of the card body
                const cardBody = document.querySelector('.card-body');
                cardBody.insertBefore(errorDiv, cardBody.firstChild);
                
                // Scroll to top
                window.scrollTo({ top: 0, behavior: 'smooth' });
                
                // Focus first invalid field
                if (firstInvalidField) {
                    firstInvalidField.focus();
                }
                
                // Auto-dismiss after 5 seconds
                setTimeout(() => {
                    const closeBtn = errorDiv.querySelector('.btn-close');
                    if (closeBtn) {
                        closeBtn.click();
                    }
                }, 5000);
                
                return false;
            }
            
            // If valid, submit the form
            form.submit();
        });
    });

    // Email validation helper function
    function validateEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }

    // Show first step
    if (stepper.steps.length > 0) {
        stepper.steps[0].classList.add('active');
        stepper.updateStepIndicators();
    }

    // Image preview functionality
    const courseImage = document.getElementById('courseImage');
    if (courseImage) {
        courseImage.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file && file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.querySelector('#thumb-container img');
                    if (img) {
                        img.src = e.target.result;
                        img.classList.remove('d-none');
                    }
                };
                reader.readAsDataURL(file);
            }
        });
    }

    // Video preview functionality
    const courseVideo = document.getElementById('courseVideo');
    if (courseVideo) {
        courseVideo.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file && file.type.startsWith('video/')) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const video = document.getElementById('video-preview');
                    const placeholder = document.getElementById('video-placeholder');
                    if (video && placeholder) {
                        video.src = e.target.result;
                        video.classList.remove('d-none');
                        placeholder.classList.add('d-none');
                    }
                };
                reader.readAsDataURL(file);
            }
        });
    }
});

