{% extends 'front_base.html.twig' %}

{% block title %}Mes Badges{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="text-center">
                <h1 class="display-5 fw-bold mb-3">
                    <i class="fas fa-trophy text-warning me-3"></i>
                    Ma Collection de Badges
                </h1>
                <p class="lead text-muted">Découvrez tous les badges que vous avez débloqués</p>
            </div>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-3">
                    <i class="fas fa-trophy fa-2x text-warning mb-2"></i>
                    <h3 class="mb-1">{{ stats.badges_count }}</h3>
                    <p class="text-muted mb-0">Badges obtenus</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-3">
                    <i class="fas fa-star fa-2x text-primary mb-2"></i>
                    <h3 class="mb-1">{{ stats.total_points }}</h3>
                    <p class="text-muted mb-0">Points XP</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-3">
                    <i class="fas fa-layer-group fa-2x text-success mb-2"></i>
                    <h3 class="mb-1">{{ stats.current_level.name }}</h3>
                    <p class="text-muted mb-0">Niveau actuel</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-3">
                    <i class="fas fa-crown fa-2x text-info mb-2"></i>
                    <h3 class="mb-1">#{{ stats.rank }}</h3>
                    <p class="text-muted mb-0">Classement</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Badges Collection -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <!-- Filtres par catégorie -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-2">
                                <button class="btn btn-outline-primary active" data-category="all">
                                    Tous les badges
                                </button>
                                <button class="btn btn-outline-primary" data-category="achievement">
                                    <i class="fas fa-trophy me-1"></i>Achievements
                                </button>
                                <button class="btn btn-outline-primary" data-category="learning">
                                    <i class="fas fa-graduation-cap me-1"></i>Apprentissage
                                </button>
                                <button class="btn btn-outline-primary" data-category="participation">
                                    <i class="fas fa-users me-1"></i>Participation
                                </button>
                                <button class="btn btn-outline-primary" data-category="milestone">
                                    <i class="fas fa-flag me-1"></i>Jalons
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Badges Grid -->
                    <div class="row g-4" id="badgesContainer">
                        {% if badges|length > 0 %}
                            {% for userBadge in badges %}
                                <div class="col-lg-3 col-md-4 col-sm-6 badge-item" 
                                     data-category="{{ userBadge.badge.category }}">
                                    <div class="card border-0 shadow-sm h-100 badge-card">
                                        <div class="card-body text-center p-3">
                                            <!-- Badge Icon -->
                                            <div class="mb-3">
                                                <div class="badge-icon mx-auto" 
                                                     style="width: 80px; height: 80px; background-color: {{ userBadge.badge.color }}20; border: 3px solid {{ userBadge.badge.color }};">
                                                    {% if userBadge.badge.icon %}
                                                        <i class="{{ userBadge.badge.icon }} fa-2x d-flex align-items-center justify-content-center h-100" 
                                                           style="color: {{ userBadge.badge.color }};"></i>
                                                    {% else %}
                                                        <i class="fas fa-award fa-2x d-flex align-items-center justify-content-center h-100" 
                                                           style="color: {{ userBadge.badge.color }};"></i>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            
                                            <!-- Badge Info -->
                                            <h6 class="card-title mb-1">{{ userBadge.badge.name }}</h6>
                                            <p class="card-text small text-muted mb-2">{{ userBadge.badge.description }}</p>
                                            
                                            <!-- Badge Meta -->
                                            <div class="badge-meta">
                                                <span class="badge bg-light text-dark mb-2">
                                                    {{ userBadge.badge.category|title }}
                                                </span>
                                                <div class="small text-muted">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    {{ userBadge.earnedAt|date('d M Y') }}
                                                </div>
                                                {% if userBadge.earnedReason %}
                                                    <div class="small text-info mt-1">
                                                        <i class="fas fa-info-circle me-1"></i>
                                                        {{ userBadge.earnedReason }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="col-12">
                                <div class="text-center py-5">
                                    <i class="fas fa-lock fa-4x text-muted mb-3"></i>
                                    <h4 class="text-muted">Aucun badge obtenu</h4>
                                    <p class="text-muted">Continuez à apprendre et à participer pour débloquer votre premier badge !</p>
                                    <a href="{{ path('app_courses') }}" class="btn btn-primary mt-3">
                                        <i class="fas fa-book me-2"></i>
                                        Explorer les cours
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Badges Verrouillés (Preview) -->
                    {% if badges|length > 0 %}
                        <div class="row mt-5">
                            <div class="col-12">
                                <h5 class="mb-3">
                                    <i class="fas fa-lock text-muted me-2"></i>
                                    Badges à débloquer
                                </h5>
                                <div class="row g-3">
                                    <!-- Ici vous pourriez afficher les badges non encore obtenus -->
                                    <div class="col-12 text-center py-3">
                                        <p class="text-muted">Continuez vos efforts pour débloquer plus de badges !</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Badge Details Modal -->
    <div class="modal fade" id="badgeModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Détails du Badge</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <!-- Contenu dynamique -->
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.badge-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    cursor: pointer;
}

.badge-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.badge-icon {
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
}

.badge-card:hover .badge-icon {
    transform: scale(1.1);
}

.badge-item {
    animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.btn-outline-primary.active {
    background-color: #0d6efd;
    border-color: #0d6efd;
    color: white;
}

.badge-meta {
    font-size: 0.875rem;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion des filtres de catégorie
    const categoryButtons = document.querySelectorAll('[data-category]');
    const badgeItems = document.querySelectorAll('.badge-item');

    categoryButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Mettre à jour le bouton actif
            categoryButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');

            // Filtrer les badges
            const selectedCategory = this.dataset.category;
            
            badgeItems.forEach(item => {
                if (selectedCategory === 'all' || item.dataset.category === selectedCategory) {
                    item.style.display = 'block';
                    item.style.animation = 'fadeInUp 0.5s ease-out';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    });

    // Gestion du clic sur les badges pour afficher les détails
    const badgeCards = document.querySelectorAll('.badge-card');
    const badgeModal = new bootstrap.Modal(document.getElementById('badgeModal'));

    badgeCards.forEach(card => {
        card.addEventListener('click', function() {
            // Ici vous pourriez charger les détails du badge dynamiquement
            const badgeTitle = this.querySelector('.card-title').textContent;
            const badgeDescription = this.querySelector('.card-text').textContent;
            
            document.querySelector('#badgeModal .modal-body').innerHTML = `
                <div class="mb-3">
                    <div class="badge-icon mx-auto" style="width: 120px; height: 120px;">
                        <i class="fas fa-trophy fa-3x d-flex align-items-center justify-content-center h-100 text-warning"></i>
                    </div>
                </div>
                <h4>${badgeTitle}</h4>
                <p class="text-muted">${badgeDescription}</p>
                <div class="mt-3">
                    <small class="text-muted">Badge obtenu pour votre excellence et votre engagement !</small>
                </div>
            `;
            
            badgeModal.show();
        });
    });
});
</script>
{% endblock %}
