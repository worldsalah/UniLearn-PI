                        <!-- Actions -->
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_instructor_edit_course', {'id': course.id}) }}" class="btn btn-primary btn-action">
                                <i class="fas fa-edit me-2"></i>Edit Course
