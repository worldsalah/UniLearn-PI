									<div class="mt-2">
										<small class="text-success"><i class="bi bi-arrow-up"></i> +18% from sessions</small>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Counter boxes END -->

				<!-- Create Session Form START -->
				<div class="row mt-5">
					<div class="col-12">
						<div class="card-modern">
							<!-- Card header START -->
							<div class="card-header">
								<div class="d-flex justify-content-between align-items-center">
									<h5 class="mb-0 fw-bold">Create New Session</h5>
									<a href="{{ path('instructor_sessions') }}" class="btn btn-outline-primary btn-sm">
										<i class="fas fa-arrow-left me-2"></i>Back to Sessions
									</a>
								</div>
							</div>
							<!-- Card header END -->

							<!-- Card body START -->
							<div class="card-body">
								{% for message in app.flashes('success') %}
									<div class="alert alert-success border-0 mb-4 rounded-3">
										<div class="d-flex align-items-center">
											<i class="bi bi-check-circle-fill me-3 fs-4"></i>
											<div>
												<strong>Success!</strong><br>
												<small class="opacity-75">{{ message }}</small>
											</div>
										</div>
									</div>
								{% endfor %}

								{% for message in app.flashes('error') %}
									<div class="alert alert-danger border-0 mb-4 rounded-3">
										<div class="d-flex align-items-center">
											<i class="bi bi-exclamation-circle-fill me-3 fs-4"></i>
											<div>
												<strong>Error!</strong><br>
												<small class="opacity-75">{{ message }}</small>
											</div>
										</div>
									</div>
								{% endfor %}

								<form method="post" action="{{ path('instructor_create_session') }}">
									<div class="row g-3">
										<!-- Session Name -->
										<div class="col-md-12">
											<label for="name" class="form-label fw-semibold">Session Name *</label>
											<input type="text" class="form-control form-control-lg {{ errors.name is defined ? 'is-invalid' : '' }}" id="name" name="name" placeholder="Enter session name" value="{{ formData.name is defined ? formData.name : '' }}">
											<small class="text-muted">Give your session a clear, descriptive name</small>
											{% if errors.name is defined %}
												<div class="invalid-feedback d-block">
													<i class="bi bi-exclamation-circle me-1"></i>{{ errors.name }}
												</div>
											{% endif %}
										</div>

										<!-- Session Level -->
										<div class="col-md-6">
											<label for="level" class="form-label fw-semibold">Session Level *</label>
											<select class="form-select form-select-lg {{ errors.level is defined ? 'is-invalid' : '' }}" id="level" name="level">
												<option value="">Select level</option>
												<option value="beginner" {{ formData.level is defined and formData.level == 'beginner' ? 'selected' : '' }}>Beginner</option>
												<option value="intermediate" {{ formData.level is defined and formData.level == 'intermediate' ? 'selected' : '' }}>Intermediate</option>
												<option value="advanced" {{ formData.level is defined and formData.level == 'advanced' ? 'selected' : '' }}>Advanced</option>
											</select>
											<small class="text-muted">Choose the appropriate difficulty level</small>
											{% if errors.level is defined %}
												<div class="invalid-feedback d-block">
													<i class="bi bi-exclamation-circle me-1"></i>{{ errors.level }}
												</div>
											{% endif %}
										</div>

										<!-- Session Duration -->
										<div class="col-md-6">
											<label for="duration" class="form-label fw-semibold">Duration (minutes) *</label>
											<input type="number" class="form-control form-control-lg {{ errors.duration is defined ? 'is-invalid' : '' }}" id="duration" name="duration" placeholder="60" value="{{ formData.duration is defined ? formData.duration : '' }}">
											<small class="text-muted">Session length in minutes (15-480 min)</small>
											{% if errors.duration is defined %}
												<div class="invalid-feedback d-block">
													<i class="bi bi-exclamation-circle me-1"></i>{{ errors.duration }}
												</div>
											{% endif %}
										</div>

										<!-- Session Date Range -->
										<div class="col-md-6">
											<label for="startDate" class="form-label fw-semibold">Start Date *</label>
											<input type="date" class="form-control form-control-lg {{ errors.startDate is defined ? 'is-invalid' : '' }}" id="startDate" name="startDate" value="{{ formData.startDate is defined ? formData.startDate : '' }}">
											<small class="text-muted">When this session period starts</small>
											{% if errors.startDate is defined %}
												<div class="invalid-feedback d-block">
													<i class="bi bi-exclamation-circle me-1"></i>{{ errors.startDate }}
												</div>
											{% endif %}
										</div>

										<div class="col-md-6">
											<label for="endDate" class="form-label fw-semibold">End Date *</label>
											<input type="date" class="form-control form-control-lg {{ errors.endDate is defined ? 'is-invalid' : '' }}" id="endDate" name="endDate" value="{{ formData.endDate is defined ? formData.endDate : '' }}">
											<small class="text-muted">When this session period ends</small>
											{% if errors.endDate is defined %}
												<div class="invalid-feedback d-block">
													<i class="bi bi-exclamation-circle me-1"></i>{{ errors.endDate }}
												</div>
											{% endif %}
										</div>

										<!-- Session Description -->
										<div class="col-md-12">
											<label for="sessionDescription" class="form-label fw-semibold">Session Description *</label>
											<textarea class="form-control {{ errors.sessionDescription is defined ? 'is-invalid' : '' }}" id="sessionDescription" name="sessionDescription" rows="4" placeholder="Describe what students will learn in this session...">{{ formData.sessionDescription is defined ? formData.sessionDescription : '' }}</textarea>
											<small class="text-muted">Provide a detailed description of the session content</small>
											{% if errors.sessionDescription is defined %}
												<div class="invalid-feedback d-block">
													<i class="bi bi-exclamation-circle me-1"></i>{{ errors.sessionDescription }}
												</div>
											{% endif %}
										</div>

										<!-- Submit Button -->
										<div class="col-12">
											<div class="d-flex gap-3">
												<button type="submit" class="btn btn-primary btn-lg px-5">
													<i class="fas fa-save me-2"></i>Create Session
												</button>
												<a href="{{ path('instructor_sessions') }}" class="btn btn-outline-secondary btn-lg px-5">
													<i class="fas fa-times me-2"></i>Cancel
												</a>
											</div>
										</div>
									</div>
								</form>
							</div>
							<!-- Card body END -->
						</div>
					</div>
				</div>
				<!-- Create Session Form END -->

			</div>
			<!-- Main content END -->
		</div>
	</div>
</section>
<!-- =======================
Page content END -->

</main>
