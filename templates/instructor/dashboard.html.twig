									</div>
									<span class="mb-0 h6 fw-light text-muted">Total Earnings</span>
									<div class="mt-2">
										<small class="text-success"><i class="bi bi-arrow-up"></i> +12% this month</small>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Counter boxes END -->

				<!-- Recent Courses START -->
				{% if recentCourses|length > 0 %}
				<div class="row mt-5">
					<div class="col-12">
						<div class="card card-body bg-transparent border p-4">
							<div class="d-flex justify-content-between align-items-center mb-4">
								<h5 class="mb-0 fw-bold">Recent Courses</h5>
								<a href="{{ path('app_instructor_manage_courses') }}" class="btn btn-sm btn-primary">View All</a>
							</div>
							<div class="row g-4">
								{% for course in recentCourses %}
								<div class="col-md-6 col-lg-4">
									<div class="course-card-modern h-100">
										{% if course.thumbnailUrl %}
										<img src="{{ course.thumbnailUrl }}" class="card-img-top" alt="{{ course.title }}">
										{% else %}
										<div class="card-img-top bg-light d-flex align-items-center justify-content-center">
											<i class="fas fa-tv fa-3x text-muted"></i>
										</div>
										{% endif %}
										<div class="card-body">
											<h6 class="card-title fw-bold">{{ course.title|length > 50 ? course.title|slice(0, 50) ~ '...' : course.title }}</h6>
											<p class="card-text text-muted small">{{ course.shortDescription|length > 80 ? course.shortDescription|slice(0, 80) ~ '...' : course.shortDescription }}</p>
											<div class="d-flex justify-content-between align-items-center mb-3">
												<span class="badge bg-primary bg-opacity-10 text-primary">{{ course.category }}</span>
												<span class="text-primary fw-bold">${{ course.price }}</span>
											</div>
											<div class="d-flex justify-content-between align-items-center">
												<div class="small text-muted">
													<i class="fas fa-users me-1"></i>
													<span>{{ random(100, 500) }} students</span>
												</div>
												<div class="small text-muted">
													<i class="fas fa-star me-1 text-warning"></i>
													<span>{{ (random(35, 50) / 10)|number_format(1) }}</span>
												</div>
											</div>
										</div>
										<div class="card-footer bg-transparent border-0">
											<div class="d-flex gap-2">
												<a href="{{ path('app_instructor_course_detail', {'id': course.id}) }}" class="btn btn-outline-primary btn-sm flex-fill">View Details</a>
												<a href="{{ path('app_instructor_edit_course', {'id': course.id}) }}" class="btn btn-primary btn-sm flex-fill">Edit</a>
											</div>
										</div>
									</div>
								</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
				<!-- Recent Courses END -->
				{% endif %}

				<!-- Chart START -->
				<div class="row mt-5">
					<div class="col-12">
						<div class="earnings-card p-4">
							<div class="d-flex justify-content-between align-items-center mb-4">
								<h5 class="mb-0 fw-bold">Earnings Overview</h5>
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-sm btn-outline-primary active">Monthly</button>
									<button type="button" class="btn btn-sm btn-outline-primary">Weekly</button>
									<button type="button" class="btn btn-sm btn-outline-primary">Daily</button>
								</div>
							</div>
							<div class="row g-4">
								<!-- Content -->
								<div class="col-sm-6 col-md-4">
									<div class="metric-card">
										<span class="badge text-bg-dark">Current Month</span>
										<h4 class="text-primary my-2">${{ earningsData.currentMonth|number_format(0, '.', ',') }}</h4>
										<p class="mb-0"><span class="text-success me-1">0.20%<i class="bi bi-arrow-up"></i></span>vs last month</p>
									</div>
								</div>
								<!-- Content -->
								<div class="col-sm-6 col-md-4">
									<div class="metric-card">
										<span class="badge text-bg-dark">Last Month</span>
										<h4 class="my-2">${{ earningsData.lastMonth|number_format(0, '.', ',') }}</h4>
										<p class="mb-0"><span class="text-danger me-1">0.10%<i class="bi bi-arrow-down"></i></span>Then last month</p>
									</div>
								</div>
								<!-- Content -->
								<div class="col-sm-6 col-md-4">
									<div class="metric-card">
										<span class="badge text-bg-dark">Average</span>
										<h4 class="my-2">${{ earningsData.average|number_format(0, '.', ',') }}</h4>
										<p class="mb-0"><span class="text-success me-1">0.05%<i class="bi bi-arrow-up"></i></span>vs last month</p>
									</div>
								</div>
							</div>
							<!-- Chart START -->
							<div class="col-md-12 mt-4">
								<div class="chart-container">
									<div id="ChartEarning" style="height:300px;"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Chart END -->

			</div>
			<!-- Main content END -->
		</div>
	</div>
</section>
<!-- =======================
Page content END -->

</main>
<!-- **************** MAIN CONTENT END **************** -->

{% endblock %}

{% block javascripts %}
<!-- ApexCharts -->
<script src="{{ asset('assets/vendor/apexcharts/js/apexcharts.min.js') }}"></script>

<!-- Chart -->
<script>
// Chart
document.addEventListener("DOMContentLoaded", function() {
    var options = {
        series: [{
            name: 'Earnings',
            data: {{ earningsData.chartData|json_encode() }}
        }],
        chart: {
            height: 350,
            type: 'area',
            toolbar: {
                show: false
            },
        },
        dataLabels: {
            enabled: false
        },
        stroke: {
            curve: 'smooth'
        },
        xaxis: {
            categories: {{ earningsData.chartLabels|json_encode() }}
        },
        tooltip: {
            x: {
                format: 'dd/MM/yy'
            },
        },
    };

    var chart = new ApexCharts(document.querySelector("#ChartEarning"), options);
    chart.render();
});
</script>
{% endblock %}
