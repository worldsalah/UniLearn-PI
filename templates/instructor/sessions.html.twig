<style>
/* Modern Instructor Dashboard Styles */
.instructor-gradient {
    background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    position: relative;
    overflow: hidden;
}
.instructor-gradient::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('{{ asset('assets/images/pattern/04.png') }}') no-repeat center center;
    background-size: cover;
    opacity: 0.1;
}
.profile-banner {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    position: relative;
    overflow: hidden;
}
.profile-banner::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(13, 110, 253, 0.05) 0%, transparent 70%);
    animation: float 6s ease-in-out infinite;
}
.avatar-enhanced {
    border: 4px solid white;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
}
.avatar-enhanced:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
}
.stat-card-instructor {
    background: white;
    border-radius: 15px;
    padding: 1.5rem;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}
.stat-card-instructor::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s;
}
.stat-card-instructor:hover::before {
    left: 100%;
}
.stat-card-instructor:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
}
.stat-icon-courses {
    color: #ffc107;
}
.stat-icon-students {
    color: #6f42c1;
}
.stat-icon-earnings {
    color: #fd7e14;
}
.sidebar-modern {
    background: #212529;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
}
.sidebar-modern .list-group-item {
    background: transparent;
    border: none;
    color: rgba(255,255,255,0.8);
    transition: all 0.3s ease;
    border-radius: 10px;
    margin: 5px;
}
.sidebar-modern .list-group-item:hover {
    background: rgba(255,255,255,0.1);
    color: white;
    transform: translateX(5px);
}
.sidebar-modern .list-group-item.active {
    background: rgba(255,255,255,0.2);
    color: white;
}
.sidebar-modern .list-group-item.text-danger:hover {
    background: rgba(220, 53, 69, 0.2);
}
@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
}
.verified-badge {
    background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    color: white;
    padding: 2px 8px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: bold;
}
.create-course-btn {
    background: #198754;
    border: none;
    color: white;
    padding: 12px 30px;
    border-radius: 25px;
    font-weight: bold;
    transition: all 0.3s ease;
    box-shadow: 0 5px 20px rgba(25, 135, 84, 0.3);
}
.create-course-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(25, 135, 84, 0.4);
    color: white;
}
.table-modern {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}
.table-modern thead {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}
.table-modern tbody tr {
    transition: all 0.3s ease;
}
.table-modern tbody tr:hover {
    background: rgba(13, 110, 253, 0.05);
    transform: translateX(5px);
}
.search-modern {
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 25px;
    padding: 12px 20px;
    transition: all 0.3s ease;
}
.search-modern:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}
.card-modern {
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: none;
    overflow: hidden;
    position: relative;
}
.card-modern::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #0d6efd, #6f42c1, #ffc107, #fd7e14);
    background-size: 300% 100%;
    animation: gradientShift 3s ease-in-out infinite;
}
.card-modern .card-header {
    background: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
    border-radius: 20px 20px 0 0;
    padding: 1.5rem;
    position: relative;
}
.card-modern .card-body {
    padding: 2rem;
}
.courses-header {
    display: flex;
    justify-content: between;
    align-items: center;
    margin-bottom: 0;
}
.courses-header h5 {
    color: #212529;
    font-weight: bold;
    font-size: 1.5rem;
}
.courses-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}
.stat-item {
    text-align: center;
    padding: 1.5rem 1rem;
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 20px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}
.stat-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(13, 110, 253, 0.1), transparent);
    transition: left 0.6s ease;
}
.stat-item:hover::before {
    left: 100%;
}
.stat-item:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    border-color: #0d6efd;
}
.stat-icon {
    width: 50px;
    height: 50px;
    margin: 0 auto 1rem;
    background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.25rem;
    transition: all 0.3s ease;
}
.stat-item:hover .stat-icon {
    transform: rotate(10deg) scale(1.1);
    box-shadow: 0 8px 25px rgba(13, 110, 253, 0.3);
}
.stat-number {
    font-size: 2rem;
    font-weight: bold;
    color: #212529;
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
}
.stat-item:hover .stat-number {
    color: #0d6efd;
    transform: scale(1.05);
}
.stat-label {
    font-size: 0.875rem;
    color: #6c757d;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
}
.stat-item:hover .stat-label {
    color: #495057;
}
.stat-trend {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 20px;
    font-weight: 600;
}
.trend-up {
    background: rgba(40, 167, 69, 0.1);
    color: #28a745;
}
.trend-down {
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
}
.trend-neutral {
    background: rgba(108, 117, 125, 0.1);
    color: #6c757d;
}
.search-sort-container {
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 15px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}
.table-modern {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    border: 1px solid #dee2e6;
}
.table-modern thead {
    background: #f8f9fa;
    color: #212529;
    border-bottom: 1px solid #dee2e6;
}
.table-modern thead th {
    border: none;
    padding: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.5px;
}
.table-modern tbody tr {
    transition: all 0.3s ease;
    border-bottom: 1px solid #f8f9fa;
}
.table-modern tbody tr:hover {
    background: #f8f9fa;
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
}
.table-modern tbody td {
    padding: 1.25rem 1rem;
    vertical-align: middle;
}
.course-title-cell {
    font-weight: 600;
}
.course-title-cell h6 {
    color: #212529;
    margin-bottom: 0.25rem;
}
.course-title-cell h6:hover {
    color: #0d6efd;
}
.course-meta {
    font-size: 0.875rem;
    color: #6c757d;
}
.badge-modern {
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-weight: 500;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}
.action-buttons {
    display: flex;
    gap: 0.5rem;
}
.btn-modern {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border: none;
}
.btn-modern:hover {
    transform: scale(1.1);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}
.btn-edit {
    background: #28a745;
    color: white;
}
.btn-delete {
    background: #dc3545;
    color: white;
}
.no-courses {
    text-align: center;
    padding: 3rem;
    color: #6c757d;
}
.no-courses i {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #dee2e6;
}

/* Custom modal styles to prevent backdrop issues */
.modal {
    z-index: 9999 !important;
    background: rgba(0, 0, 0, 0.5) !important;
}
.modal-backdrop {
    z-index: 9998 !important;
}
.modal-dialog {
    z-index: 10000 !important;
    pointer-events: auto !important;
}
.modal-content {
    z-index: 10001 !important;
    pointer-events: auto !important;
}
.modal-header, .modal-body, .modal-footer {
    pointer-events: auto !important;
    z-index: 10002 !important;
}

/* Ensure buttons are clickable */
.modal-footer button {
    z-index: 10003 !important;
    position: relative !important;
    pointer-events: auto !important;
    cursor: pointer !important;
}

/* Fix any overlay issues */
.modal.show {
    display: block !important;
    pointer-events: auto !important;
}
</style>
{% endblock %}

