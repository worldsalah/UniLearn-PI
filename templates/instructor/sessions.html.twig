{% block javascripts %}
<!-- Choices.js -->
<script src="{{ asset('assets/vendor/choices/js/choices.min.js') }}"></script>

<!-- Init Choices.js -->
<script>
document.addEventListener("DOMContentLoaded", function() {
    // Initialize Choices.js
    const elements = document.querySelectorAll('.js-choice');
    elements.forEach(function(element) {
        new Choices(element, {
            searchEnabled: element.dataset.searchEnabled === 'true',
            searchPlaceholderValue: 'Search...',
            itemSelectText: 'Press to select',
        });
    });

    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const searchForm = document.getElementById('searchForm');
    const sessionsTableBody = document.getElementById('sessionsTableBody');
    const sessionsTable = document.getElementById('sessionsTable');
    const sortSelect = document.getElementById('sortSelect');

    if (searchInput && sessionsTableBody) {
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            filterSessions(searchTerm);
        });

        searchForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const searchTerm = searchInput.value.toLowerCase();
            filterSessions(searchTerm);
        });
    }

    // Sort functionality
    if (sortSelect && sessionsTableBody) {
        sortSelect.addEventListener('change', function() {
            const sortValue = this.value;
            sortSessions(sortValue);
        });
    }

    function filterSessions(searchTerm) {
        const rows = sessionsTableBody.getElementsByTagName('tr');
        
        for (let row of rows) {
            const name = row.getAttribute('data-session-name') || '';
            const isVisible = name.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
        }

        // Update pagination info
        updatePaginationInfo();
    }

    function sortSessions(sortValue) {
        const rows = Array.from(sessionsTableBody.getElementsByTagName('tr'));
        
        if (sortValue === '') {
            // Reset to original order
            rows.sort((a, b) => {
                return a.getAttribute('data-session-id') - b.getAttribute('data-session-id');
            });
        } else {
            rows.sort((a, b) => {
                switch(sortValue) {
                    case 'name':
                        return a.getAttribute('data-session-name').localeCompare(b.getAttribute('data-session-name'));
                    case 'date':
                        const dateA = a.getAttribute('data-session-date') || '';
                        const dateB = b.getAttribute('data-session-date') || '';
                        return dateA.localeCompare(dateB);
                    case 'duration':
                        return parseInt(a.getAttribute('data-session-duration')) - parseInt(b.getAttribute('data-session-duration'));
                    case 'level':
                        return a.getAttribute('data-session-level').localeCompare(b.getAttribute('data-session-level'));
                    default:
                        return 0;
                }
            });
        }

        // Re-append sorted rows
        rows.forEach(row => sessionsTableBody.appendChild(row));
        updatePaginationInfo();
    }

    function updatePaginationInfo() {
        const visibleRows = Array.from(sessionsTableBody.getElementsByTagName('tr')).filter(row => row.style.display !== 'none');
        const paginationInfo = document.querySelector('.d-flex.justify-content-between.align-items-center.mt-4 p');
        
        if (paginationInfo) {
            const count = visibleRows.length;
            paginationInfo.textContent = `Showing ${count > 0 ? 1 : 0} to ${count} of ${count} entries`;
        }
    }
});

// Delete confirmation function
function confirmDelete(sessionId, sessionTitle) {
    console.log('Opening delete modal for:', sessionTitle);
    
    // Set the session title in the modal
    document.getElementById('sessionTitleToDelete').textContent = sessionTitle;
    
    // Store the session ID for later use
    const confirmBtn = document.getElementById('confirmDeleteBtn');
    confirmBtn.setAttribute('data-session-id', sessionId);
    
    // Add event listener to the delete button
    confirmBtn.onclick = function() {
        console.log('Delete confirmed for session ID:', sessionId);
        window.location.href = '/instructor/session/' + sessionId + '/delete';
    };
    
    // Show the modal
    const modal = document.getElementById('deleteModal');
    modal.style.display = 'block';
    console.log('Modal should be visible now');
}

// Close modal function
function closeDeleteModal() {
    console.log('Closing modal');
    const modal = document.getElementById('deleteModal');
    modal.style.display = 'none';
}
</script>
