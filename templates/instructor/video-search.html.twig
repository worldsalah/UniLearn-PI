    color: #0d6efd;
    border-left-color: #0a58ca;
}

.lesson-item {
    padding: 6px 15px 6px 45px;
    background: white;
    border-left: 2px solid #6c757d;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 13px;
    color: #495057;
    border-bottom: 1px solid #e9ecef;
}

.lesson-item:hover {
    background: #f1f3f5;
    color: #0d6efd;
    border-left-color: #0d6efd;
}

.lesson-item.selected {
    background: #d1ecf1;
    color: #0d6efd;
    border-left-color: #0d6efd;
    font-weight: 600;
}

.course-icon {
    margin-right: 8px;
    color: #0d6efd;
}

.chapter-icon {
    margin-right: 6px;
    color: #6c757d;
