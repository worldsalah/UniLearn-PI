{% block javascripts %}
    <script>
        let courses = [];
        let selectedLessonId = null;
        
        // Load lessons on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadCourses();
            getWebDevVideos(); // Auto-load web development videos
        });
        
        // Load courses with hierarchical structure
        function loadCourses() {
            fetch('/api/lessons')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        courses = data.courses;
                        populateLessonDropdown();
                    }
                })
                .catch(error => {
                    console.error('Failed to load courses:', error);
                });
        }
        
        // Create beautiful hierarchical dropdown
        function populateLessonDropdown() {
            const lessonSelect = document.getElementById('lessonSelect');
            
            if (courses.length === 0) {
                lessonSelect.innerHTML = '<option value="">No courses available</option>';
                return;
            }
            
            let html = '<option value="">Choose a course and lesson...</option>';
            
            courses.forEach(course => {
                html += `<div class="course-item" onclick="toggleCourse('${course.id}')">
                    <i class="fas fa-book course-icon"></i>
                    ${course.title}
                    <i class="fas fa-chevron-down ms-auto"></i>
                </div>`;
                
                if (course.chapters && Object.keys(course.chapters).length > 0) {
                    html += '<div class="course-lessons" id="course-' + course.id + '" style="display: none;">';
                    
                    Object.values(course.chapters).forEach(chapter => {
                        html += `<div class="chapter-item" onclick="toggleChapter('${course.id}', '${chapter.id}')">
                            <i class="fas fa-folder chapter-icon"></i>
                            ${chapter.title}
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </div>`;
                        
                        if (chapter.lessons && chapter.lessons.length > 0) {
                            html += '<div class="chapter-lessons" id="chapter-' + course.id + '-' + chapter.id + '" style="display: none;">';
                            
                            chapter.lessons.forEach(lesson => {
                                html += `<div class="lesson-item" onclick="selectLesson('${lesson.id}', '${lesson.title}')">
                                    <i class="fas fa-play-circle lesson-icon"></i>
                                    ${lesson.title}
                                </div>`;
                            });
                            
                            html += '</div>';
                        }
                    });
                    
                    html += '</div>';
                }
            });
            
            // Create custom dropdown container
            const dropdownContainer = document.createElement('div');
            dropdownContainer.className = 'lesson-selector';
            dropdownContainer.innerHTML = html;
            
            // Replace the select with our custom dropdown
            lessonSelect.parentNode.replaceChild(dropdownContainer, lessonSelect);
            
            // Add click outside to close
            document.addEventListener('click', function(e) {
                if (!dropdownContainer.contains(e.target)) {
                    closeAllDropdowns();
                }
            });
        }
        
        function toggleCourse(courseId) {
            const courseLessons = document.getElementById('course-' + courseId);
            const allCourseLessons = document.querySelectorAll('.course-lessons');
            
            // Close all other course dropdowns
            allCourseLessons.forEach(el => {
                if (el.id !== 'course-' + courseId) {
                    el.style.display = 'none';
                }
            });
            
            // Toggle current course
            courseLessons.style.display = courseLessons.style.display === 'none' ? 'block' : 'none';
        }
        
        function toggleChapter(courseId, chapterId) {
            const chapterLessons = document.getElementById('chapter-' + courseId + '-' + chapterId);
            const allChapterLessons = document.querySelectorAll('.chapter-lessons');
            
            // Close all other chapter dropdowns
            allChapterLessons.forEach(el => {
                if (el.id !== 'chapter-' + courseId + '-' + chapterId) {
                    el.style.display = 'none';
                }
            });
            
            // Toggle current chapter
            chapterLessons.style.display = chapterLessons.style.display === 'none' ? 'block' : 'none';
        }
        
        function selectLesson(lessonId, lessonTitle) {
            // Remove previous selection
            document.querySelectorAll('.lesson-item').forEach(el => {
                el.classList.remove('selected');
            });
            
            // Add selection to current lesson
            event.currentTarget.classList.add('selected');
            selectedLessonId = lessonId;
            
            // Show notification
            showNotification(`Selected: ${lessonTitle}`, 'success');
        }
        
        function closeAllDropdowns() {
            document.querySelectorAll('.course-lessons').forEach(el => {
                el.style.display = 'none';
            });
        }
        
        function searchVideos() {
            const query = document.getElementById('searchInput').value.trim();
            if (!query) return;
            
            const resultsDiv = document.getElementById('searchResults');
            resultsDiv.innerHTML = '<div class="loading"><i class="fas fa-spinner fa-spin me-2"></i>Searching...</div>';
            
            fetch(`/api/youtube/search?q=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayVideos(data.videos);
                    } else {
                        resultsDiv.innerHTML = `<div class="error"><i class="fas fa-exclamation-triangle me-2"></i>${data.error}</div>`;
                    }
                })
                .catch(error => {
                    resultsDiv.innerHTML = `<div class="error"><i class="fas fa-exclamation-triangle me-2"></i>Search failed: ${error.message}</div>`;
                });
        }
        
        function getWebDevVideos() {
            const resultsDiv = document.getElementById('searchResults');
            resultsDiv.innerHTML = '<div class="loading"><i class="fas fa-spinner fa-spin me-2"></i>Loading web development videos...</div>';
            
            fetch('/api/youtube/web-dev-videos')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayVideos(data.videos);
                    } else {
                        resultsDiv.innerHTML = `<div class="error"><i class="fas fa-exclamation-triangle me-2"></i>${data.error}</div>`;
                    }
                })
                .catch(error => {
                    resultsDiv.innerHTML = `<div class="error"><i class="fas fa-exclamation-triangle me-2"></i>Failed to load videos: ${error.message}</div>`;
                });
        }
        
        function displayVideos(videos) {
            const resultsDiv = document.getElementById('searchResults');
            
            if (!videos || videos.length === 0) {
                resultsDiv.innerHTML = '<div class="error"><i class="fas fa-info-circle me-2"></i>No videos found</div>';
                return;
            }
            
            let html = '<div class="video-grid">';
            videos.forEach(video => {
                html += `
                    <div class="video-card">
                        <img src="${video.thumbnailUrl}" alt="${video.title}" class="video-thumbnail">
                        <div class="video-info">
                            <h3 class="video-title">${video.title}</h3>
                            <div class="video-meta">
                                <span class="video-duration">${video.duration || 'N/A'}</span>
                                <span class="video-channel">${video.channelTitle}</span>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-primary btn-sm" onclick="selectVideo('${video.id}', '${video.title}', '${video.embedUrl}')" 
                                        ${lessons.length === 0 ? 'disabled title="Please create a lesson first"' : ''}>
                                    <i class="fas fa-plus me-2"></i>
                                    Add to Lesson
                                </button>
                                <button class="btn btn-outline-primary btn-sm ms-2" onclick="previewVideo('${video.embedUrl}')">
                                    <i class="fas fa-play me-2"></i>
                                    Preview
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            });
            html += '</div>';
            
            resultsDiv.innerHTML = html;
        }
        
        function selectVideo(videoId, videoTitle, embedUrl) {
            if (!selectedLessonId) {
                showNotification('Please select a lesson first', 'warning');
                return;
            }
            
            // Show confirmation dialog
            if (confirm(`Add "${videoTitle}" to the selected lesson?`)) {
                addVideoToLesson(videoId, videoTitle, selectedLessonId);
            }
        }
        
        function addVideoToLesson(videoId, videoTitle, lessonId) {
            const data = {
                videoId: videoId,
                videoTitle: videoTitle,
                lessonId: parseInt(lessonId)
            };
            
            fetch('/api/lesson/add-video', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(`Video "${videoTitle}" added to lesson successfully!`, 'success');
                } else {
                    showNotification(`Failed to add video: ${data.error}`, 'danger');
                }
            })
            .catch(error => {
                showNotification(`Failed to add video: ${error.message}`, 'danger');
            });
        }
        
        function previewVideo(embedUrl) {
            window.open(embedUrl, '_blank');
        }
        
        // Handle Enter key in search
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchVideos();
            }
        });
        
        // Notification system
        function showNotification(message, type = 'info') {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            `;
            
            document.body.appendChild(notification);
            
            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }
    </script>
