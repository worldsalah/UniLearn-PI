{% block javascripts %}
    <script>
        let courses = [];
        let selectedLessonId = null;
        let selectedLessonTitle = null;
        
        // Load lessons on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== PAGE LOAD DEBUG ===');
            console.log('hasCourses variable:', '{{ hasCourses }}');
            console.log('courses count:', '{{ courses|length }}');
            
            loadCourses();
            getWebDevVideos(); // Auto-load web development videos
            
            // Handle lesson selection change
            const lessonSelect = document.getElementById('lessonSelect');
            if (lessonSelect) {
                lessonSelect.addEventListener('change', function() {
                    if (this.value) {
                        selectedLessonId = this.value;
                        selectedLessonTitle = this.options[this.selectedIndex].text;
                    } else {
                        selectedLessonId = null;
                        selectedLessonTitle = null;
                    }
                });
            }
            
            // Auto-run debug on page load
            setTimeout(() => {
                debugCourses();
                debugLessons();
                debugTemplate();
            }, 1000);
        });
        
        // Load courses with hierarchical structure
        function loadCourses() {
            // Only load courses if we have courses available
            {% if hasCourses %}
                fetch('/api/lessons')
                    .then(response => {
                        return response.json();
                    })
                    .then(data => {
                        if (data.success) {
                            courses = data.courses;
                            populateLessonDropdown();
                        } else {
                            // Show error message in dropdown
                            const lessonSelect = document.getElementById('lessonSelect');
                            lessonSelect.innerHTML = `<option value="">Error: ${data.error}</option>`;
                        }
                    })
                    .catch(error => {
                        // Show error message in dropdown
                        const lessonSelect = document.getElementById('lessonSelect');
                        lessonSelect.innerHTML = `<option value="">Network error: ${error.message}</option>`;
                    });
            {% endif %}
        }
        
        // Create beautiful hierarchical dropdown
        function populateLessonDropdown() {
            const lessonSelect = document.getElementById('lessonSelect');
            
            if (!courses || courses.length === 0) {
                lessonSelect.innerHTML = '<option value="">No courses available</option>';
                return;
            }
            
            let html = '<option value="">üìö Select a course and lesson...</option>';
            
            courses.forEach(course => {
                // Add course as a disabled option (for visual separation)
                html += `<option value="" disabled class="course-header">üìö ${course.title}</option>`;
                
                if (course.chapters && Object.keys(course.chapters).length > 0) {
                    Object.values(course.chapters).forEach(chapter => {
                        // Add chapter as a disabled option (for visual separation)
                        html += `<option value="" disabled class="chapter-header">üìÅ ${chapter.title}</option>`;
                        
                        if (chapter.lessons && chapter.lessons.length > 0) {
                            chapter.lessons.forEach(lesson => {
                                // Add lessons as selectable options
                                html += `<option value="${lesson.id}" class="lesson-option">üìπ ${lesson.title}</option>`;
                            });
                        }
                    });
                }
            });
            
            lessonSelect.innerHTML = html;
        }
        
        function toggleCourse(courseId) {
            const courseLessons = document.getElementById('course-' + courseId);
            const allCourseLessons = document.querySelectorAll('.course-lessons');
            
            // Close all other course dropdowns
            allCourseLessons.forEach(el => {
                if (el.id !== 'course-' + courseId) {
                    el.style.display = 'none';
                }
            });
            
            // Toggle current course
            courseLessons.style.display = courseLessons.style.display === 'none' ? 'block' : 'none';
        }
        
        function toggleChapter(courseId, chapterId) {
            const chapterLessons = document.getElementById('chapter-' + courseId + '-' + chapterId);
            const allChapterLessons = document.querySelectorAll('.chapter-lessons');
            
            // Close all other chapter dropdowns
            allChapterLessons.forEach(el => {
                if (el.id !== 'chapter-' + courseId + '-' + chapterId) {
                    el.style.display = 'none';
                }
            });
            
            // Toggle current chapter
            chapterLessons.style.display = chapterLessons.style.display === 'none' ? 'block' : 'none';
        }
        
        function selectLesson(lessonId, lessonTitle) {
            // Remove previous selection
            document.querySelectorAll('.lesson-item').forEach(el => {
                el.classList.remove('selected');
            });
            
            // Add selection to current lesson
            event.currentTarget.classList.add('selected');
            selectedLessonId = lessonId;
            
            // Show notification
            showNotification(`Selected: ${lessonTitle}`, 'success');
        }
        
        function closeAllDropdowns() {
            document.querySelectorAll('.course-lessons').forEach(el => {
                el.style.display = 'none';
            });
        }
        
        function searchVideos() {
            const query = document.getElementById('searchInput').value.trim();
