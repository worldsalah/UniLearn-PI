{% extends 'base.html.twig' %}

{% block title %}Job Requests - Unilearn{% endblock %}

{% block body %}
{% include 'components/header.html.twig' %}

<main>
    <section class="pt-4">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-briefcase me-2"></i>Job Requests
                            </h5>
                            <a href="{{ path('app_job_new') }}" class="btn btn-light btn-sm float-end">
                                <i class="fas fa-plus me-2"></i>Post New Job
                            </a>
                        </div>
                        <div class="card-body">
                            {% if jobs|length > 0 %}
                                <div class="row g-3">
                                    {% for job in jobs %}
                                        <div class="col-md-6 col-lg-4">
                                            <div class="card border h-100">
                                                <div class="card-body">
                                                    <h6 class="card-title">{{ job.title }}</h6>
                                                    <p class="card-text">{{ job.description|slice(0, 100) }}...</p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="badge bg-primary">${{ job.budget }}</span>
                                                        <small class="text-muted">{{ job.createdAt|date('M d, Y') }}</small>
                                                    </div>
                                                </div>
                                                <div class="card-footer bg-light">
                                                    <a href="{{ path('app_job_show', {id: job.id}) }}" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-eye me-2"></i>View Details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="text-center py-5">
                                    <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No job requests posted yet</h5>
                                    <p class="text-muted">Be the first to post a job request!</p>
                                    <a href="{{ path('app_job_new') }}" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Post First Job
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

{% include 'components/footer.html.twig' %}
{% endblock %}
