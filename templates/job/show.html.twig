{% extends 'front_base.html.twig' %}

{% block title %}{{ job.title }} - Unilearn{% endblock %}

{% block content %}
<section class="pt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title">{{ job.title }}</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-light text-primary">{{ job.status|upper }}</span>
                            <span class="badge bg-success">$ {{ job.budget }}</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Job Description</h6>
                            <p>{{ job.description }}</p>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="fw-bold mb-2">Budget</h6>
                                <p class="h4 text-success">${{ job.budget }}</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-bold mb-2">Posted</h6>
                                <p class="h6">{{ job.createdAt|date('F j, Y, g:i A') }}</p>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6 class="fw-bold mb-2">Client Information</h6>
                            <div class="d-flex align-items-center mb-2">
                                <div class="avatar avatar-sm me-2">
                                    <div class="avatar-img rounded-circle bg-primary text-white d-flex align-items-center justify-content-center">
                                        <i class="fas fa-user fa-sm"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-0">{{ job.client.name|default(job.client.email) }}</h6>
                                    <small class="text-muted">{{ job.client.email }}</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_marketplace_shop') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Marketplace
                            </a>
                            <a href="{{ path('app_order_new_from_job', {id: job.id}) }}" class="btn btn-success">
                                <i class="fas fa-shopping-cart me-2"></i>Order This Job
                            </a>
                        </div>
                        </div>
                    </div>
                </div>

                <!-- Applications Sidebar -->
                <div class="col-lg-4">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="card-title">
                                <i class="fas fa-users me-2"></i>Applications
                            </h5>
                        </div>
                        <div class="card-body">
                            {% if job.applications|length > 0 %}
                                {% for application in job.applications %}
                                    <div class="d-flex align-items-start mb-3 p-3 border-bottom">
                                        <div class="avatar avatar-xs me-3">
                                            <div class="avatar-img rounded-circle bg-success text-white d-flex align-items-center justify-content-center">
                                                <i class="fas fa-user fa-xs"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">{{ application.freelancer.name }}</h6>
                                            <p class="text-muted small mb-2">{{ application.coverLetter|slice(0, 100) }}...</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge bg-primary">${{ application.proposedBudget }}</span>
                                                <span class="badge bg-{{ application.status == 'pending' ? 'warning' : application.status == 'accepted' ? 'success' : 'danger' }}">{{ application.status|upper }}</span>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="text-muted text-center">No applications yet.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
