{% extends 'base.html.twig' %}

{% block title %}Order Service - {{ product.title }}{% endblock %}

{% block body %}
{% include 'components/header.html.twig' %}

<main>
    <section class="pt-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <div class="card shadow">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-shopping-cart me-2"></i>Order Service
                            </h5>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                
                                <div class="mb-3">
                                    <h6 class="fw-bold mb-2">Service Details</h6>
                                    <div class="bg-light p-3 rounded">
                                        {% if product.image %}
                                            <img src="{{ asset('uploads/products/' ~ product.image) }}" class="rounded me-3" alt="{{ product.title }}" style="width: 80px; height: 80px; object-fit: cover;">
                                        {% endif %}
                                        <div class="ms-3">
                                            <h6 class="mb-1">{{ product.title }}</h6>
                                            <p class="text-muted small mb-0">{{ product.category }}</p>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar avatar-xs me-2">
                                                    <div class="avatar-img rounded-circle bg-primary text-white d-flex align-items-center justify-content-center">
                                                        <i class="fas fa-user fa-xs"></i>
                                                    </div>
                                                </div>
                                                <span class="small">{{ product.freelancer.name }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <h6 class="fw-bold mb-2">Pricing</h6>
                                    <div class="bg-success bg-opacity-10 p-3 rounded text-center">
                                        <h4 class="text-success fw-bold mb-0">${{ product.price }}</h4>
                                            <small class="text-muted">Service Price</small>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <h6 class="fw-bold mb-2">Delivery Time</h6>
                                    <div class="bg-info bg-opacity-10 p-3 rounded text-center">
                                        <h5 class="text-info fw-bold mb-0">3-5 Days</h5>
                                            <small class="text-muted">Estimated Delivery</small>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.totalPrice, 'Total Amount ($)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        {{ form_widget(form.totalPrice, {'attr': {'class': 'form-control', 'value': product.price, 'readonly': 'readonly'}}) }}
                                    </div>
                                    {{ form_errors(form.totalPrice) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.status, 'Order Status', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.status) }}
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-check me-2"></i>Place Order
                                    </button>
                                    <a href="{{ path('app_product_show', {slug: product.slug}) }}" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Service
                                    </a>
                                </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

{% include 'components/footer.html.twig' %}
{% endblock %}
