{% extends 'base.html.twig' %}

{% block title %}Login - Unilearn{% endblock %}

{% block stylesheets %}
<style>
.login-container {
    max-width: 400px;
    margin: 100px auto;
    padding: 2rem;
    background: white;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}
.login-form {
    margin-top: 2rem;
}
.form-control {
    margin-bottom: 1rem;
}
.btn-login {
    width: 100%;
    padding: 0.75rem;
    font-weight: 600;
}
.alert {
    margin-bottom: 1rem;
}
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="login-container">
        <div class="text-center mb-4">
            <h2>Welcome Back</h2>
            <p class="text-muted">Sign in to your account</p>
        </div>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post" class="login-form">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" value="{{ last_email }}" name="email" id="email" class="form-control" autocomplete="email">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" autocomplete="current-password">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-primary btn-login" type="submit">
                Sign in
            </button>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">
                Demo Admin: admin123
            </small>
        </div>
    </div>
</div>
{% endblock %}
