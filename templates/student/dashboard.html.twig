                    <div class="col-md-6 col-lg-3">
                        <div class="card card-hover-shadow border-0 h-100">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="icon-lg bg-info bg-opacity-10 text-info rounded-circle">
                                        <i class="fas fa-certificate"></i>
                                    </div>
                                </div>
                                <h4 class="mb-0">3</h4>
                                <p class="mb-0 small text-muted">Certificates</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Stats END -->

                <!-- Continue learning START -->
                <div class="card shadow mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0">Continue Learning</h5>
                            <a href="#" class="btn btn-sm btn-primary">View All</a>
