<script>
// Load gamification data on dashboard
document.addEventListener('DOMContentLoaded', function() {
    // Load user gamification stats
    fetch('/gamification/api/stats')
        .then(response => response.json())
        .then(data => {
            if (data.stats && data.progress) {
                // Update dashboard widget
                updateDashboardWidget(data.stats, data.progress);
            }
        })
        .catch(error => {
            console.log('Gamification data not available');
            // Set default values
            setDefaultValues();
        });
    
    function updateDashboardWidget(stats, progress) {
        // Update XP
        const xpElement = document.getElementById('total-xp');
        if (xpElement) {
            xpElement.textContent = stats.total_points || 0;
        }
        
        // Update level
        const levelElement = document.getElementById('current-level');
        if (levelElement && stats.current_level) {
            levelElement.textContent = stats.current_level.name || 'Beginner';
        }
        
        // Update rank
        const rankElement = document.getElementById('user-rank');
        if (rankElement) {
            rankElement.textContent = stats.rank || '--';
        }
        
        // Update progress bar
        const progressBar = document.getElementById('level-progress');
        if (progressBar && progress) {
            progressBar.style.width = progress.progress + '%';
            progressBar.style.backgroundColor = stats.current_level?.color || '#6366f1';
        }
        
        // Animate the widget
        animateWidget();
    }
    
    function setDefaultValues() {
        document.getElementById('total-xp').textContent = '0';
        document.getElementById('current-level').textContent = 'Beginner';
        document.getElementById('user-rank').textContent = '--';
        document.getElementById('level-progress').style.width = '0%';
    }
    
    function animateWidget() {
        const widget = document.querySelector('.card.shadow.mb-4');
        if (widget) {
            widget.style.opacity = '0';
            widget.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                widget.style.transition = 'all 0.5s ease';
                widget.style.opacity = '1';
                widget.style.transform = 'translateY(0)';
            }, 100);
        }
        
        // Animate XP counter
        const xpElement = document.getElementById('total-xp');
        if (xpElement) {
            const targetValue = parseInt(xpElement.textContent);
            let currentValue = 0;
            const increment = targetValue / 50;
            
            const timer = setInterval(() => {
                currentValue += increment;
                if (currentValue >= targetValue) {
                    currentValue = targetValue;
                    clearInterval(timer);
                }
                xpElement.textContent = Math.round(currentValue);
            }, 20);
        }
    }
});
</script>

