                            <div class="col-md-6">
                                <div class="card border-0">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start">
                                            <img src="{{ asset('assets/images/courses/4by3/01.jpg') }}" class="rounded me-3" width="80" alt="Course">
