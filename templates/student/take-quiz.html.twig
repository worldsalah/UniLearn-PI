}

.bird-body.proud {
    animation: cute-proud 1.2s ease;
}

.bird-body.thinking {
    animation: cute-thinking 1.5s ease infinite;
}

.bird-body.celebrating {
    animation: cute-celebrate 2s ease;
}

.bird-body.sleepy {
    animation: cute-sleepy 2.5s ease infinite;
}

.bird-body.love {
    animation: cute-love 1.3s ease;
}

.bird-body.wink {
    animation: cute-wink 1s ease;
}

